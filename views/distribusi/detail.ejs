<%- include('../layouts/header', { title: title, bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'distribusi' }) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center">
      <a href="/distribusi" class="text-gray-500 hover:text-gray-700 mr-4">
        <i class="fas fa-arrow-left text-lg"></i>
      </a>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">
          <i class="fas fa-info-circle mr-2 text-primary-600"></i>Detail
          Distribusi
        </h1>
        <p class="text-gray-600 mt-1">Informasi lengkap distribusi zakat</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <!-- Distribution Info -->
      <div class="bg-white shadow-sm rounded-lg mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">
              <i class="fas fa-share-alt mr-2 text-primary-600"></i>Informasi
              Distribusi
            </h2>
            <span
              class="inline-flex px-3 py-1 text-sm font-semibold rounded-full <% if (distribusi.status === 'diterima') { %>bg-green-100 text-green-800<% } else if (distribusi.status === 'disalurkan') { %>bg-blue-100 text-blue-800<% } else if (distribusi.status === 'pending') { %>bg-yellow-100 text-yellow-800<% } else { %>bg-red-100 text-red-800<% } %>"
            >
              <% if (distribusi.status === 'diterima') { %>
              <i class="fas fa-check mr-1"></i>
              <% } else if (distribusi.status === 'disalurkan') { %>
              <i class="fas fa-truck mr-1"></i>
              <% } else if (distribusi.status === 'pending') { %>
              <i class="fas fa-clock mr-1"></i>
              <% } else { %>
              <i class="fas fa-times mr-1"></i>
              <% } %> <%= distribusi.status.charAt(0).toUpperCase() +
              distribusi.status.slice(1) %>
            </span>
          </div>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1"
                >ID Distribusi</label
              >
              <p class="text-sm text-gray-900 font-mono">
                #<%= distribusi.id.toString().padStart(6, '0') %>
              </p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1"
                >Tanggal Distribusi</label
              >
              <p class="text-sm text-gray-900">
                <i class="fas fa-calendar mr-2"></i>
                <%= new
                Date(distribusi.tanggal_distribusi).toLocaleDateString('id-ID',
                { day: 'numeric', month: 'long', year: 'numeric' }) %>
              </p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1"
                >Jenis & Jumlah Zakat</label
              >
              <div class="flex items-center">
                <% if (distribusi.jenis_zakat === 'beras') { %>
                <div
                  class="w-8 h-8 bg-green-500 rounded-lg flex items-center justify-center mr-3"
                >
                  <i class="fas fa-seedling text-white text-sm"></i>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= parseFloat(distribusi.jumlah).toLocaleString('id-ID') %>
                    kg Beras
                  </p>
                  <p class="text-xs text-gray-500">Zakat dalam bentuk beras</p>
                </div>
                <% } else { %>
                <div
                  class="w-8 h-8 bg-yellow-500 rounded-lg flex items-center justify-center mr-3"
                >
                  <i class="fas fa-coins text-white text-sm"></i>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    Rp <%= parseFloat(distribusi.jumlah).toLocaleString('id-ID')
                    %>
                  </p>
                  <p class="text-xs text-gray-500">Zakat dalam bentuk uang</p>
                </div>
                <% } %>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-500 mb-1"
                >PIC Distribusi</label
              >
              <p class="text-sm text-gray-900">
                <i class="fas fa-user mr-2"></i>
                <%= distribusi.user_nama || 'System' %>
              </p>
            </div>

            <% if (distribusi.keterangan) { %>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-500 mb-1"
                >Keterangan</label
              >
              <p class="text-sm text-gray-900 bg-gray-50 p-3 rounded-md">
                <%= distribusi.keterangan %>
              </p>
            </div>
            <% } %>

            <!-- Bukti Foto -->
            <% if (distribusi.bukti_foto) { %>
            <div class="md:col-span-2">
              <label class="block text-sm font-medium text-gray-500 mb-2">
                <i class="fas fa-camera mr-2"></i>Bukti Foto Distribusi
              </label>
              <div class="relative group">
                <img 
                  src="<%= distribusi.bukti_foto %>" 
                  alt="Bukti Distribusi" 
                  class="w-full h-auto max-h-96 object-contain rounded-lg border-2 border-gray-200 shadow-sm hover:shadow-md transition-all cursor-pointer"
                  onclick="openImageModal('<%= distribusi.bukti_foto %>')"
                >
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 rounded-lg transition-all flex items-center justify-center">
                  <button 
                    onclick="openImageModal('<%= distribusi.bukti_foto %>')"
                    class="opacity-0 group-hover:opacity-100 bg-white px-4 py-2 rounded-lg shadow-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-all"
                  >
                    <i class="fas fa-search-plus mr-2"></i>Lihat Lebih Besar
                  </button>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Mustahik Info -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">
            <i class="fas fa-user-friends mr-2 text-primary-600"></i>Informasi
            Mustahik
          </h2>
        </div>
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="flex-shrink-0 h-16 w-16">
              <div
                class="h-16 w-16 rounded-full bg-gradient-to-r from-purple-400 to-pink-400 flex items-center justify-center"
              >
                <span class="text-xl font-bold text-white">
                  <%= distribusi.mustahik_nama.charAt(0).toUpperCase() %>
                </span>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-bold text-gray-900">
                <a
                  href="/mustahik/detail/<%= distribusi.mustahik_id %>"
                  class="hover:text-primary-600"
                >
                  <%= distribusi.mustahik_nama %>
                </a>
              </h3>
              <div class="flex items-center space-x-3 mt-1">
                <% if (distribusi.kategori) { %>
                <span
                  class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <% if (distribusi.kategori === 'fakir') { %>bg-red-100 text-red-800<% } else if (distribusi.kategori === 'miskin') { %>bg-orange-100 text-orange-800<% } else if (distribusi.kategori === 'amil') { %>bg-green-100 text-green-800<% } else if (distribusi.kategori === 'mualaf') { %>bg-blue-100 text-blue-800<% } else if (distribusi.kategori === 'fisabilillah') { %>bg-purple-100 text-purple-800<% } else { %>bg-gray-100 text-gray-800<% } %>"
                >
                  <%= distribusi.kategori.charAt(0).toUpperCase() +
                  distribusi.kategori.slice(1) %>
                </span>
                <% } %>
                <% if (distribusi.rt_nama) { %>
                <span class="text-sm text-gray-500">
                  <i class="fas fa-home mr-1"></i>RT <%= distribusi.rt_nama %>
                </span>
                <% } %>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <h4 class="text-sm font-medium text-gray-700 mb-3">
              Riwayat Distribusi Lainnya
            </h4>
            <% if (typeof otherDistributions === 'undefined' || otherDistributions.length === 0) { %>
            <p class="text-sm text-gray-500">
              Tidak ada distribusi lain untuk mustahik ini
            </p>
            <% } else { %>
            <div class="space-y-2">
              <% otherDistributions.slice(0, 3).forEach(d => { %>
              <div
                class="flex items-center justify-between bg-white rounded-md p-2"
              >
                <div class="flex items-center">
                  <% if (d.jenis_zakat === 'beras') { %>
                  <i class="fas fa-seedling text-green-600 mr-2"></i>
                  <span class="text-sm text-gray-900">
                    <%= parseFloat(d.jumlah).toLocaleString('id-ID') %> kg Beras
                  </span>
                  <% } else { %>
                  <i class="fas fa-coins text-yellow-600 mr-2"></i>
                  <span class="text-sm text-gray-900">
                    Rp <%= parseFloat(d.jumlah).toLocaleString('id-ID') %>
                  </span>
                  <% } %>
                </div>
                <div class="flex items-center space-x-2">
                  <span
                    class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <% if (d.status === 'diterima') { %>bg-green-100 text-green-800<% } else if (d.status === 'disalurkan') { %>bg-blue-100 text-blue-800<% } else if (d.status === 'pending') { %>bg-yellow-100 text-yellow-800<% } else { %>bg-red-100 text-red-800<% } %>"
                  >
                    <%= d.status.charAt(0).toUpperCase() + d.status.slice(1) %>
                  </span>
                  <span class="text-xs text-gray-500">
                    <%= new Date(d.created_at).toLocaleDateString('id-ID') %>
                  </span>
                </div>
              </div>
              <% }); %> <% if (otherDistributions.length > 3) { %>
              <div class="text-center pt-2">
                <a
                  href="/mustahik/detail/<%= distribusi.mustahik_id %>"
                  class="text-sm text-primary-600 hover:text-primary-800"
                >
                  Lihat semua (<%= otherDistributions.length %> distribusi)
                </a>
              </div>
              <% } %>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <!-- Quick Actions -->
      <div class="bg-white shadow-sm rounded-lg mb-6">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            <i class="fas fa-bolt mr-2 text-primary-600"></i>Aksi Cepat
          </h3>
        </div>
        <div class="p-6 space-y-3">
          <% if (distribusi.status === 'pending' || distribusi.status ===
          'disalurkan') { %>
          <a
            href="/distribusi/edit/<%= distribusi.id %>"
            class="btn-primary w-full text-center"
          >
            <i class="fas fa-edit mr-2"></i>Edit Distribusi
          </a>
          <% } %> <% if (distribusi.status === 'pending') { %>
          <form
            method="POST"
            action="/distribusi/update-status/<%= distribusi.id %>"
            class="space-y-2"
          >
            <input type="hidden" name="status" value="disalurkan" />
            <button type="submit" class="btn-secondary w-full">
              <i class="fas fa-truck mr-2"></i>Tandai Disalurkan
            </button>
          </form>
          <% } %> <% if (distribusi.status === 'disalurkan') { %>
          <form
            method="POST"
            action="/distribusi/update-status/<%= distribusi.id %>"
            class="space-y-2"
          >
            <input type="hidden" name="status" value="diterima" />
            <button type="submit" class="btn-success w-full">
              <i class="fas fa-check mr-2"></i>Tandai Diterima
            </button>
          </form>
          <% } %> <% if (distribusi.status === 'pending') { %>
          <form
            method="POST"
            action="/distribusi/update-status/<%= distribusi.id %>"
            id="cancelForm"
          >
            <input type="hidden" name="status" value="batal" />
            <button type="submit" class="btn-danger w-full">
              <i class="fas fa-times mr-2"></i>Batalkan
            </button>
          </form>
          <% } %>

          <a
            href="/distribusi/create?mustahik_id=<%= distribusi.mustahik_id %>"
            class="btn-secondary w-full text-center"
          >
            <i class="fas fa-plus mr-2"></i>Distribusi Lagi
          </a>

          <% if (distribusi.status === 'pending') { %>
          <form
            method="POST"
            action="/distribusi/delete/<%= distribusi.id %>?_method=DELETE"
            id="deleteForm"
          >
            <button type="submit" class="btn-danger w-full">
              <i class="fas fa-trash mr-2"></i>Hapus
            </button>
          </form>
          <% } %>
        </div>
      </div>

      <!-- Timeline -->
      <div class="bg-white shadow-sm rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">
            <i class="fas fa-history mr-2 text-primary-600"></i>Timeline
          </h3>
        </div>
        <div class="p-6">
          <div class="flow-root">
            <ul class="-mb-8">
              <!-- Created -->
              <li>
                <div class="relative pb-8">
                  <div
                    class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"
                  ></div>
                  <div class="relative flex space-x-3">
                    <div>
                      <span
                        class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center ring-8 ring-white"
                      >
                        <i class="fas fa-plus text-white text-xs"></i>
                      </span>
                    </div>
                    <div
                      class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4"
                    >
                      <div>
                        <p class="text-sm text-gray-500">Distribusi dibuat</p>
                      </div>
                      <div
                        class="text-right text-sm whitespace-nowrap text-gray-500"
                      >
                        <%= new
                        Date(distribusi.created_at).toLocaleDateString('id-ID')
                        %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>

              <!-- Status updates based on current status -->
              <% if (distribusi.status === 'disalurkan' || distribusi.status ===
              'diterima') { %>
              <li>
                <div class="relative pb-8">
                  <% if (distribusi.status === 'diterima') { %>
                  <div
                    class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"
                  ></div>
                  <% } %>
                  <div class="relative flex space-x-3">
                    <div>
                      <span
                        class="h-8 w-8 rounded-full bg-yellow-500 flex items-center justify-center ring-8 ring-white"
                      >
                        <i class="fas fa-truck text-white text-xs"></i>
                      </span>
                    </div>
                    <div
                      class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4"
                    >
                      <div>
                        <p class="text-sm text-gray-500">Zakat disalurkan</p>
                      </div>
                      <div
                        class="text-right text-sm whitespace-nowrap text-gray-500"
                      >
                        <%= new
                        Date(distribusi.updated_at).toLocaleDateString('id-ID')
                        %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
              <% } %> <% if (distribusi.status === 'diterima') { %>
              <li>
                <div class="relative">
                  <div class="relative flex space-x-3">
                    <div>
                      <span
                        class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center ring-8 ring-white"
                      >
                        <i class="fas fa-check text-white text-xs"></i>
                      </span>
                    </div>
                    <div
                      class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4"
                    >
                      <div>
                        <p class="text-sm text-gray-500">
                          Zakat diterima mustahik
                        </p>
                      </div>
                      <div
                        class="text-right text-sm whitespace-nowrap text-gray-500"
                      >
                        <%= new
                        Date(distribusi.updated_at).toLocaleDateString('id-ID')
                        %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
              <% } else if (distribusi.status === 'batal') { %>
              <li>
                <div class="relative">
                  <div class="relative flex space-x-3">
                    <div>
                      <span
                        class="h-8 w-8 rounded-full bg-red-500 flex items-center justify-center ring-8 ring-white"
                      >
                        <i class="fas fa-times text-white text-xs"></i>
                      </span>
                    </div>
                    <div
                      class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4"
                    >
                      <div>
                        <p class="text-sm text-gray-500">
                          Distribusi dibatalkan
                        </p>
                      </div>
                      <div
                        class="text-right text-sm whitespace-nowrap text-gray-500"
                      >
                        <%= new
                        Date(distribusi.updated_at).toLocaleDateString('id-ID')
                        %>
                      </div>
                    </div>
                  </div>
                </div>
              </li>
              <% } else if (distribusi.status === 'pending') { %>
              <li>
                <div class="relative">
                  <div class="relative flex space-x-3">
                    <div>
                      <span
                        class="h-8 w-8 rounded-full bg-gray-400 flex items-center justify-center ring-8 ring-white"
                      >
                        <i class="fas fa-clock text-white text-xs"></i>
                      </span>
                    </div>
                    <div
                      class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4"
                    >
                      <div>
                        <p class="text-sm text-gray-500">Menunggu distribusi</p>
                      </div>
                      <div
                        class="text-right text-sm whitespace-nowrap text-gray-500"
                      >
                        Pending
                      </div>
                    </div>
                  </div>
                </div>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Image Modal for Full View -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden flex items-center justify-center p-4" onclick="closeImageModal()">
  <div class="relative max-w-5xl max-h-full" onclick="event.stopPropagation()">
    <button 
      onclick="closeImageModal()" 
      class="absolute top-4 right-4 bg-white text-gray-800 rounded-full w-10 h-10 flex items-center justify-center hover:bg-gray-100 transition-all shadow-lg z-10"
    >
      <i class="fas fa-times"></i>
    </button>
    <img 
      id="modalImage" 
      src="" 
      alt="Bukti Distribusi" 
      class="max-w-full max-h-[90vh] object-contain rounded-lg shadow-2xl"
    >
  </div>
</div>

<script>
  // Image modal functions
  function openImageModal(imageSrc) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = imageSrc;
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeImageModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  // Close modal on ESC key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeImageModal();
    }
  });

  // Handle cancel form submission with SweetAlert2
  document
    .getElementById("cancelForm")
    .addEventListener("submit", function (e) {
      e.preventDefault();

      showConfirm(
        "Apakah Anda yakin ingin membatalkan distribusi ini?",
        "Konfirmasi Pembatalan",
        {
          icon: "warning",
          confirmText: "Ya, Batalkan",
          cancelText: "Tidak",
          confirmColor: "#ef4444",
        }
      ).then((result) => {
        if (result.isConfirmed) {
          this.submit();
        }
      });
    });

  // Handle delete form submission with SweetAlert2
  document
    .getElementById("deleteForm")
    .addEventListener("submit", function (e) {
      e.preventDefault();

      showDeleteConfirm(
        "distribusi ini",
        "Apakah Anda yakin ingin menghapus distribusi ini? Tindakan ini tidak dapat dibatalkan."
      ).then((result) => {
        if (result.isConfirmed) {
          this.submit();
        }
      });
    });
</script>

<%- include('../layouts/footer') %>
