<%- include('../layouts/header', { title: title, bodyClass: 'bg-gray-50' , currentPage: 'distribusi' }) %>

  <div class="page-wrapper">
    <!-- Modern Header -->
    <div class="page-header">
      <div class="header-content-wrapper">
        <div class="header-left-section">
          <div class="header-icon-box">
            <i class="fas fa-share-alt"></i>
          </div>
          <div class="header-text-box">
            <h1 class="header-title-text">Distribusi Zakat</h1>
            <p class="header-subtitle-text">Kelola penyaluran zakat kepada mustahik</p>
          </div>
        </div>
        <div class="header-actions">
          <a href="/distribusi/create" class="btn-action btn-action-primary">
            <i class="fas fa-plus mr-2"></i>
            <span>Distribusi Baru</span>
          </a>
          <a href="/distribusi/laporan" class="btn-action btn-action-secondary">
            <i class="fas fa-chart-bar mr-2"></i>
            <span>Laporan</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-container">
      <div class="stat-box stat-box-warning">
        <div class="stat-icon-wrapper stat-icon-warning">
          <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= stats.pending %>
          </div>
          <div class="stat-label-text">Pending</div>
          <div class="stat-progress-bar">
            <div class="stat-progress-fill stat-progress-warning"
              style="width: <%= (stats.pending / Math.max(stats.total, 1)) * 100 %>%"></div>
          </div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-info">
        <div class="stat-icon-wrapper stat-icon-info">
          <i class="fas fa-truck"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= stats.disalurkan %>
          </div>
          <div class="stat-label-text">Disalurkan</div>
          <div class="stat-progress-bar">
            <div class="stat-progress-fill stat-progress-info"
              style="width: <%= (stats.disalurkan / Math.max(stats.total, 1)) * 100 %>%"></div>
          </div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-success">
        <div class="stat-icon-wrapper stat-icon-success">
          <i class="fas fa-check-circle"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= stats.diterima %>
          </div>
          <div class="stat-label-text">Diterima</div>
          <div class="stat-progress-bar">
            <div class="stat-progress-fill stat-progress-success"
              style="width: <%= (stats.diterima / Math.max(stats.total, 1)) * 100 %>%"></div>
          </div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-danger">
        <div class="stat-icon-wrapper stat-icon-danger">
          <i class="fas fa-times-circle"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= stats.batal %>
          </div>
          <div class="stat-label-text">Batal</div>
          <div class="stat-progress-bar">
            <div class="stat-progress-fill stat-progress-danger"
              style="width: <%= (stats.batal / Math.max(stats.total, 1)) * 100 %>%"></div>
          </div>
        </div>
        <div class="stat-decoration"></div>
      </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
      <div class="filter-header">
        <div class="filter-header-icon">
          <i class="fas fa-filter"></i>
        </div>
        <div class="filter-header-text">
          <h2 class="filter-title">Filter & Pencarian</h2>
          <p class="filter-subtitle">Cari dan filter data distribusi</p>
        </div>
      </div>
      <div class="filter-content">
        <form method="GET" action="/distribusi" class="filter-form">
          <div class="filter-input-group filter-input-wide">
            <label class="filter-label">Cari Mustahik atau PIC</label>
            <div class="filter-input-wrapper">
              <div class="filter-input-icon">
                <i class="fas fa-search"></i>
              </div>
              <input type="text" id="search" name="search" value="<%= search || '' %>"
                placeholder="Ketik nama mustahik atau PIC..." class="filter-input">
            </div>
          </div>

          <div class="filter-input-group">
            <label class="filter-label">Status Distribusi</label>
            <select id="status" name="status" class="filter-select">
              <option value="">Semua Status</option>
              <option value="pending" <%=status==='pending' ? 'selected' : '' %>>Pending</option>
              <option value="disalurkan" <%=status==='disalurkan' ? 'selected' : '' %>>Disalurkan</option>
              <option value="diterima" <%=status==='diterima' ? 'selected' : '' %>>Diterima</option>
              <option value="batal" <%=status==='batal' ? 'selected' : '' %>>Batal</option>
            </select>
          </div>

          <div class="filter-input-group">
            <label class="filter-label">Jenis Zakat</label>
            <select id="jenis" name="jenis" class="filter-select">
              <option value="">Semua Jenis</option>
              <option value="beras" <%=jenis==='beras' ? 'selected' : '' %>>Beras</option>
              <option value="uang" <%=jenis==='uang' ? 'selected' : '' %>>Uang</option>
            </select>
          </div>

          <div class="filter-actions">
            <button type="submit" class="btn-filter-primary">
              <i class="fas fa-filter mr-2"></i>Terapkan
            </button>
            <a href="/distribusi" class="btn-filter-reset">
              <i class="fas fa-undo"></i>
            </a>
          </div>
        </form>
      </div>
    </div>

    <!-- Data Table Section -->
    <div class="table-section">
      <div class="table-header-wrapper">
        <div class="table-header-left">
          <div class="table-header-icon">
            <i class="fas fa-list"></i>
          </div>
          <div class="table-header-text">
            <h2 class="table-title">Daftar Distribusi</h2>
            <p class="table-subtitle">Kelola data distribusi zakat kepada mustahik</p>
          </div>
        </div>
        <div class="table-header-right">
          <span class="table-badge">
            <i class="fas fa-database"></i>
            <%= total %> distribusi
          </span>
          <% if (totalPages> 1) { %>
            <span class="table-badge-secondary">
              <i class="fas fa-file-alt"></i>
              Hal <%= page %>/<%= totalPages %>
            </span>
            <% } %>
        </div>
      </div>

      <div class="table-content-wrapper">
        <% if (distributions.length===0) { %>
          <div class="empty-state-box">
            <div class="empty-state-icon">
              <i class="fas fa-share-alt"></i>
            </div>
            <h3 class="empty-state-title">
              <% if (search || status || jenis) { %>
                Tidak ada hasil ditemukan
                <% } else { %>
                  Belum ada distribusi
                  <% } %>
            </h3>
            <p class="empty-state-desc">
              <% if (search || status || jenis) { %>
                Coba ubah filter pencarian Anda atau <a href="/distribusi" class="text-link">reset filter</a>
                <% } else { %>
                  Mulai dengan membuat distribusi zakat pertama untuk mustahik
                  <% } %>
            </p>
            <a href="/distribusi/create" class="btn-empty-state">
              <i class="fas fa-plus mr-2"></i>
              Buat Distribusi Baru
            </a>
          </div>
          <% } else { %>
            <div class="table-responsive-wrapper">
              <table class="data-table">
                <thead>
                  <tr>
                    <th>Mustahik</th>
                    <th>Distribusi</th>
                    <th>Status</th>
                    <th>PIC & Tanggal</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% distributions.forEach((d, index)=> { %>
                    <tr class="table-row-animated" style="animation-delay: <%= index * 0.05 %>s;">
                      <td>
                        <div class="cell-mustahik">
                          <div class="mustahik-avatar">
                            <span>
                              <%= d.mustahik_nama.charAt(0).toUpperCase() %>
                            </span>
                          </div>
                          <div class="mustahik-info">
                            <div class="mustahik-name">
                              <%= d.mustahik_nama %>
                            </div>
                            <div class="mustahik-category">
                              <span class="category-badge category-<%= d.mustahik_kategori || 'default' %>">
                                <i class="fas fa-tag"></i>
                                <%= (d.mustahik_kategori || 'Tidak ada' ).charAt(0).toUpperCase() + (d.mustahik_kategori
                                  || 'tidak ada' ).slice(1) %>
                              </span>
                            </div>
                          </div>
                        </div>
                      </td>
                      <td>
                        <div class="cell-distribusi">
                          <div class="distribusi-icon">
                            <% if (d.jenis_zakat==='beras' ) { %>
                              <i class="fas fa-seedling"></i>
                              <% } else { %>
                                <i class="fas fa-coins"></i>
                                <% } %>
                          </div>
                          <div class="distribusi-info">
                            <div class="distribusi-amount">
                              <% if (d.jenis_zakat==='beras' ) { %>
                                <%= parseFloat(d.jumlah).toLocaleString('id-ID') %> kg
                                  <% } else { %>
                                    Rp <%= parseFloat(d.jumlah).toLocaleString('id-ID') %>
                                      <% } %>
                            </div>
                            <div class="distribusi-type">
                              <%= d.jenis_zakat %>
                            </div>
                          </div>
                        </div>
                      </td>
                      <td>
                        <span class="status-badge status-<%= d.status %>">
                          <% if (d.status==='diterima' ) { %>
                            <i class="fas fa-check-circle"></i>
                            <% } else if (d.status==='disalurkan' ) { %>
                              <i class="fas fa-truck"></i>
                              <% } else if (d.status==='pending' ) { %>
                                <i class="fas fa-clock"></i>
                                <% } else { %>
                                  <i class="fas fa-times-circle"></i>
                                  <% } %>
                                    <%= d.status.charAt(0).toUpperCase() + d.status.slice(1) %>
                        </span>
                      </td>
                      <td>
                        <div class="cell-pic">
                          <div class="pic-name">
                            <%= d.user_nama || 'System' %>
                          </div>
                          <div class="pic-date">
                            <i class="far fa-calendar"></i>
                            <%= new Date(d.created_at).toLocaleDateString('id-ID', { day: 'numeric' , month: 'short' ,
                              year: 'numeric' }) %>
                          </div>
                        </div>
                      </td>
                      <td>
                        <div class="action-buttons-group">
                          <a href="/distribusi/detail/<%= d.id %>" class="btn-icon btn-icon-info"
                            title="Detail Distribusi">
                            <i class="fas fa-eye"></i>
                          </a>
                          <% if (d.status==='pending' || d.status==='disalurkan' ) { %>
                            <a href="/distribusi/edit/<%= d.id %>" class="btn-icon btn-icon-primary"
                              title="Edit Distribusi">
                              <i class="fas fa-edit"></i>
                            </a>
                            <% } %>
                              <% if (d.status==='pending' ) { %>
                                <form method="POST" action="/distribusi/delete/<%= d.id %>?_method=DELETE"
                                  class="inline-form" id="delete-form-<%= d.id %>">
                                  <button type="button" class="btn-icon btn-icon-danger" title="Hapus Distribusi"
                                    data-id="<%= d.id %>" data-nama="<%= d.mustahik_nama %>"
                                    onclick="confirmDelete(this)">
                                    <i class="fas fa-trash"></i>
                                  </button>
                                </form>
                                <% } %>
                        </div>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>

            <!-- Pagination -->
            <% if (totalPages> 1) { %>
              <div class="pagination-wrapper">
                <div class="pagination-info">
                  Menampilkan <span class="font-semibold">
                    <%= (page - 1) * 20 + 1 %>
                  </span> -
                  <span class="font-semibold">
                    <%= Math.min(page * 20, total) %>
                  </span> dari
                  <span class="font-semibold">
                    <%= total %>
                  </span> distribusi
                </div>

                <nav class="pagination-nav">
                  <% if (page> 1) { %>
                    <a href="?page=<%= page - 1 %><%= search ? '&search=' + search : '' %><%= status ? '&status=' + status : '' %><%= jenis ? '&jenis=' + jenis : '' %>"
                      class="pagination-btn pagination-prev">
                      <i class="fas fa-chevron-left"></i>
                    </a>
                    <% } %>

                      <% for (let i=Math.max(1, page - 2); i <=Math.min(totalPages, page + 2); i++) { %>
                        <a href="?page=<%= i %><%= search ? '&search=' + search : '' %><%= status ? '&status=' + status : '' %><%= jenis ? '&jenis=' + jenis : '' %>"
                          class="pagination-btn <%= i === page ? 'pagination-active' : '' %>">
                          <%= i %>
                        </a>
                        <% } %>

                          <% if (page < totalPages) { %>
                            <a href="?page=<%= page + 1 %><%= search ? '&search=' + search : '' %><%= status ? '&status=' + status : '' %><%= jenis ? '&jenis=' + jenis : '' %>"
                              class="pagination-btn pagination-next">
                              <i class="fas fa-chevron-right"></i>
                            </a>
                            <% } %>
                </nav>
              </div>
              <% } %>
                <% } %>
      </div>
    </div>
  </div>

  <!-- Modern Styles -->
