<%- include('../layouts/header', { title: title, bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'distribusi' }) %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Enhanced Header -->
  <div class="mb-8">
    <div class="bg-gradient-to-r from-green-500 to-emerald-600 rounded-2xl shadow-xl overflow-hidden">
      <div class="relative px-6 py-8 sm:px-8 sm:py-10">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute top-4 right-4 w-20 h-20 rounded-full bg-white"></div>
          <div class="absolute bottom-4 left-4 w-16 h-16 rounded-full bg-white"></div>
        </div>
        
        <div class="relative flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6">
          <div class="flex-1">
            <div class="flex items-center gap-4 mb-3">
              <div class="bg-white/20 p-3 rounded-xl backdrop-blur-sm border border-white/10">
                <i class="fas fa-share-alt text-white text-2xl"></i>
              </div>
              <div>
                <h1 class="text-3xl sm:text-4xl font-bold text-white mb-1">Distribusi Zakat</h1>
                <p class="text-green-100 text-lg">Kelola penyaluran zakat kepada mustahik</p>
              </div>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-3">
            <a href="/distribusi/create" class="btn-primary bg-white/20 hover:bg-white/30 border border-white/20 text-white backdrop-blur-sm">
              <i class="fas fa-plus mr-2"></i>Distribusi Baru
            </a>
            <a href="/distribusi/laporan" class="btn-secondary bg-white/10 hover:bg-white/20 border border-white/10 text-white backdrop-blur-sm">
              <i class="fas fa-chart-bar mr-2"></i>Laporan
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-yellow-500 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-clock text-white text-lg"></i>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Pending</p>
            <p class="text-2xl font-bold text-gray-900"><%= stats.pending %></p>
            <div class="w-full bg-gray-200 rounded-full h-1.5 mt-2">
              <div class="bg-yellow-500 h-1.5 rounded-full" style="width: <%= (stats.pending / Math.max(stats.total, 1)) * 100 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-truck text-white text-lg"></i>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Disalurkan</p>
            <p class="text-2xl font-bold text-gray-900"><%= stats.disalurkan %></p>
            <div class="w-full bg-gray-200 rounded-full h-1.5 mt-2">
              <div class="bg-blue-500 h-1.5 rounded-full" style="width: <%= (stats.disalurkan / Math.max(stats.total, 1)) * 100 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-check-circle text-white text-lg"></i>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Diterima</p>
            <p class="text-2xl font-bold text-gray-900"><%= stats.diterima %></p>
            <div class="w-full bg-gray-200 rounded-full h-1.5 mt-2">
              <div class="bg-green-500 h-1.5 rounded-full" style="width: <%= (stats.diterima / Math.max(stats.total, 1)) * 100 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
      <div class="p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center shadow-lg">
              <i class="fas fa-times-circle text-white text-lg"></i>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-600">Batal</p>
            <p class="text-2xl font-bold text-gray-900"><%= stats.batal %></p>
            <div class="w-full bg-gray-200 rounded-full h-1.5 mt-2">
              <div class="bg-red-500 h-1.5 rounded-full" style="width: <%= (stats.batal / Math.max(stats.total, 1)) * 100 %>%"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Filters and Search -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 mb-8 overflow-hidden">
    <div class="px-6 py-6 border-b border-gray-100">
      <h3 class="text-lg font-semibold text-gray-900 flex items-center">
        <i class="fas fa-filter text-green-500 mr-2"></i>Filter & Pencarian
      </h3>
    </div>
    <div class="p-6">
      <form method="GET" action="/distribusi" class="grid grid-cols-1 lg:grid-cols-5 gap-4">
        <div class="lg:col-span-2">
          <label class="block text-sm font-medium text-gray-700 mb-2">Cari Mustahik atau PIC</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="fas fa-search text-gray-400"></i>
            </div>
            <input type="text" id="search" name="search" 
                   value="<%= search || '' %>"
                   placeholder="Ketik nama mustahik atau PIC..."
                   class="block w-full pl-10 pr-4 py-3 border border-gray-200 rounded-xl text-sm
                          focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Status Distribusi</label>
          <select id="status" name="status" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-sm
                                                   focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
            <option value="">Semua Status</option>
            <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending</option>
            <option value="disalurkan" <%= status === 'disalurkan' ? 'selected' : '' %>>Disalurkan</option>
            <option value="diterima" <%= status === 'diterima' ? 'selected' : '' %>>Diterima</option>
            <option value="batal" <%= status === 'batal' ? 'selected' : '' %>>Batal</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">Jenis Zakat</label>
          <select id="jenis" name="jenis" class="block w-full px-4 py-3 border border-gray-200 rounded-xl text-sm
                                                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
            <option value="">Semua Jenis</option>
            <option value="beras" <%= jenis === 'beras' ? 'selected' : '' %>>Beras</option>
            <option value="uang" <%= jenis === 'uang' ? 'selected' : '' %>>Uang</option>
          </select>
        </div>

        <div class="flex items-end space-x-2">
          <button type="submit" class="btn-primary flex-1 py-3">
            <i class="fas fa-filter mr-2"></i>Terapkan
          </button>
          <a href="/distribusi" class="btn-secondary px-4 py-3">
            <i class="fas fa-undo"></i>
          </a>
        </div>
      </form>
    </div>
  </div>

  <!-- Enhanced Distribution Table -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden px-4">
    <div class="px-6 py-4 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-gray-100">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <h2 class="text-xl font-semibold text-gray-900 flex items-center">
          <i class="fas fa-list text-green-500 mr-3"></i>Daftar Distribusi
          <span class="ml-2 text-sm font-normal text-gray-600 bg-white px-3 py-1 rounded-full">
            <%= total %> distribusi
          </span>
        </h2>
        <div class="mt-2 sm:mt-0 text-sm text-gray-600">
          Halaman <%= page %> dari <%= totalPages %>
        </div>
      </div>
    </div>

    <% if (distributions.length === 0) { %>
    <div class="text-center py-16">
      <div class="max-w-md mx-auto">
        <div class="w-24 h-24 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <i class="fas fa-share-alt text-green-500 text-3xl"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">
          <% if (search || status || jenis) { %>
            Tidak ada hasil ditemukan
          <% } else { %>
            Belum ada distribusi
          <% } %>
        </h3>
        <p class="text-gray-600 mb-8 leading-relaxed">
          <% if (search || status || jenis) { %>
            Coba ubah filter pencarian Anda atau <a href="/distribusi" class="text-green-600 hover:text-green-700 font-medium">reset filter</a>
          <% } else { %>
            Mulai dengan membuat distribusi zakat pertama untuk mustahik
          <% } %>
        </p>
        <a href="/distribusi/create" class="btn-primary inline-flex items-center">
          <i class="fas fa-plus mr-2"></i>Buat Distribusi Baru
        </a>
      </div>
    </div>
    <% } else { %>
    <div class="overflow-x-auto px-4">
      <table class="w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Mustahik
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Distribusi
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              PIC & Tanggal
            </th>
            <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
              Aksi
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% distributions.forEach(d => { %>
          <tr class="hover:bg-green-50 transition-colors duration-200">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-gradient-to-r from-green-400 to-emerald-500 rounded-xl flex items-center justify-center shadow-sm">
                    <span class="text-sm font-bold text-white">
                      <%= d.mustahik_nama.charAt(0).toUpperCase() %>
                    </span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-semibold text-gray-900"><%= d.mustahik_nama %></div>
                  <div class="text-xs text-gray-500 mt-1">
                    <span class="inline-flex items-center px-2 py-1 rounded-full font-medium
                      <% if (d.mustahik_kategori === 'fakir') { %>bg-red-100 text-red-800<% } 
                         else if (d.mustahik_kategori === 'miskin') { %>bg-orange-100 text-orange-800<% } 
                         else if (d.mustahik_kategori === 'amil') { %>bg-green-100 text-green-800<% } 
                         else if (d.mustahik_kategori === 'mualaf') { %>bg-blue-100 text-blue-800<% } 
                         else if (d.mustahik_kategori === 'fisabilillah') { %>bg-purple-100 text-purple-800<% } 
                         else { %>bg-gray-100 text-gray-800<% } %>">
                      <i class="fas fa-tag mr-1 text-xs"></i>
                      <%= (d.mustahik_kategori || 'Tidak ada').charAt(0).toUpperCase() + (d.mustahik_kategori || 'tidak ada').slice(1) %>
                    </span>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center">
                <% if (d.jenis_zakat === 'beras') { %>
                  <i class="fas fa-seedling text-green-600 text-lg mr-3"></i>
                <% } else { %>
                  <i class="fas fa-coins text-yellow-600 text-lg mr-3"></i>
                <% } %>
                <div>
                  <div class="text-sm font-semibold text-gray-900">
                    <% if (d.jenis_zakat === 'beras') { %>
                      <%= parseFloat(d.jumlah).toLocaleString('id-ID') %> kg
                    <% } else { %>
                      Rp <%= parseFloat(d.jumlah).toLocaleString('id-ID') %>
                    <% } %>
                  </div>
                  <div class="text-xs text-gray-500 capitalize"><%= d.jenis_zakat %></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-semibold
                <% if (d.status === 'diterima') { %>bg-green-100 text-green-800<% } 
                   else if (d.status === 'disalurkan') { %>bg-blue-100 text-blue-800<% } 
                   else if (d.status === 'pending') { %>bg-yellow-100 text-yellow-800<% } 
                   else { %>bg-red-100 text-red-800<% } %>">
                <% if (d.status === 'diterima') { %>
                  <i class="fas fa-check-circle mr-2"></i>
                <% } else if (d.status === 'disalurkan') { %>
                  <i class="fas fa-truck mr-2"></i>
                <% } else if (d.status === 'pending') { %>
                  <i class="fas fa-clock mr-2"></i>
                <% } else { %>
                  <i class="fas fa-times-circle mr-2"></i>
                <% } %>
                <%= d.status.charAt(0).toUpperCase() + d.status.slice(1) %>
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900"><%= d.user_nama || 'System' %></div>
              <div class="text-xs text-gray-500">
                <i class="far fa-calendar mr-1"></i>
                <%= new Date(d.created_at).toLocaleDateString('id-ID', { 
                  day: 'numeric', month: 'short', year: 'numeric' 
                }) %>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center space-x-2">
                <a href="/distribusi/detail/<%= d.id %>" 
                   class="text-green-600 hover:text-green-900 p-2 rounded-lg hover:bg-green-100 transition-colors duration-200"
                   title="Detail Distribusi">
                  <i class="fas fa-eye"></i>
                </a>
                <% if (d.status === 'pending' || d.status === 'disalurkan') { %>
                <a href="/distribusi/edit/<%= d.id %>" 
                   class="text-blue-600 hover:text-blue-900 p-2 rounded-lg hover:bg-blue-100 transition-colors duration-200"
                   title="Edit Distribusi">
                  <i class="fas fa-edit"></i>
                </a>
                <% } %>
                <% if (d.status === 'pending') { %>
                <form method="POST" action="/distribusi/delete/<%= d.id %>?_method=DELETE" 
                      class="inline" onsubmit="return confirm('Apakah Anda yakin ingin menghapus distribusi ini?')">
                  <button type="submit" 
                          class="text-red-600 hover:text-red-900 p-2 rounded-lg hover:bg-red-100 transition-colors duration-200"
                          title="Hapus Distribusi">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
                <% } %>
              </div>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Enhanced Pagination -->
    <% if (totalPages > 1) { %>
    <div class="bg-white px-6 py-4 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="text-sm text-gray-700">
          Menampilkan <span class="font-semibold"><%= (page - 1) * 20 + 1 %></span> - 
          <span class="font-semibold"><%= Math.min(page * 20, total) %></span> dari 
          <span class="font-semibold"><%= total %></span> distribusi
        </div>
        
        <nav class="flex items-center space-x-1">
          <% if (page > 1) { %>
          <a href="?page=<%= page - 1 %><%= search ? '&search=' + search : '' %><%= status ? '&status=' + status : '' %><%= jenis ? '&jenis=' + jenis : '' %>" 
             class="p-2 rounded-lg border border-gray-300 text-gray-500 hover:bg-gray-50 transition-colors duration-200">
            <i class="fas fa-chevron-left"></i>
          </a>
          <% } %>
          
          <% for (let i = Math.max(1, page - 2); i <= Math.min(totalPages, page + 2); i++) { %>
          <a href="?page=<%= i %><%= search ? '&search=' + search : '' %><%= status ? '&status=' + status : '' %><%= jenis ? '&jenis=' + jenis : '' %>" 
             class="px-4 py-2 rounded-lg border text-sm font-medium transition-all duration-200
                    <%= i === page ? 'bg-green-500 text-white border-green-500 shadow-sm' : 'border-gray-300 text-gray-700 hover:bg-gray-50' %>">
            <%= i %>
          </a>
          <% } %>
          
          <% if (page < totalPages) { %>
          <a href="?page=<%= page + 1 %><%= search ? '&search=' + search : '' %><%= status ? '&status=' + status : '' %><%= jenis ? '&jenis=' + jenis : '' %>" 
             class="p-2 rounded-lg border border-gray-300 text-gray-500 hover:bg-gray-50 transition-colors duration-200">
            <i class="fas fa-chevron-right"></i>
          </a>
          <% } %>
        </nav>
      </div>
    </div>
    <% } %>
    <% } %>
  </div>
</div>

<style>
  .btn-primary {
    @apply bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-xl transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2;
  }
  
  .btn-secondary {
    @apply bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-xl transition-all duration-200 border border-gray-300 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2;
  }
  
  /* Custom animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.5s ease-out;
  }
</style>

<script>
  // Add fade-in animation to table rows
  document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('tbody tr');
    rows.forEach((row, index) => {
      row.style.animationDelay = `${index * 0.05}s`;
      row.classList.add('animate-fade-in');
    });
  });
</script>

<%- include('../layouts/footer') %>