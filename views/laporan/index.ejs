<%- include('../layouts/header', { title: title, bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'laporan' }) %>

<div class="page-wrapper">
  <!-- Modern Header -->
  <div class="page-header">
    <div class="header-content-wrapper">
      <div class="header-left-section">
        <div class="header-icon-box">
          <i class="fas fa-chart-bar"></i>
        </div>
        <div class="header-text-box">
          <h1 class="header-title-text">Laporan Zakat</h1>
          <p class="header-subtitle-text">Laporan pengumpulan dan distribusi zakat fitrah per RT</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-container">
    <div class="stat-box stat-box-primary">
      <div class="stat-icon-wrapper stat-icon-primary">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">
          <%= laporanRT.reduce((total, rt) => total + (rt.total_muzakki || 0), 0) %>
        </div>
        <div class="stat-label-text">Total Muzakki</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-success">
      <div class="stat-icon-wrapper stat-icon-success">
        <i class="fas fa-weight"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">
          <%= laporanRT.reduce((total, rt) => total + (parseFloat(rt.total_beras_kg) || 0), 0).toFixed(1) %> kg
        </div>
        <div class="stat-label-text">Total Beras</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-info">
      <div class="stat-icon-wrapper stat-icon-info">
        <i class="fas fa-coins"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">
          Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(laporanRT.reduce((total, rt) => total + (parseFloat(rt.total_terkumpul) || 0), 0)) %>
        </div>
        <div class="stat-label-text">Total Terkumpul</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-warning">
      <div class="stat-icon-wrapper stat-icon-warning">
        <i class="fas fa-hand-holding-usd"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">
          Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(totalInfak) %>
        </div>
        <div class="stat-label-text">Total Infak</div>
      </div>
      <div class="stat-decoration"></div>
    </div>
  </div>

  <!-- Data Table Section -->
  <div class="table-section">
    <div class="table-header-wrapper">
      <div class="table-header-left">
        <div class="table-header-icon">
          <i class="fas fa-table"></i>
        </div>
        <div class="table-header-text">
          <h2 class="table-title">Laporan Per RT</h2>
          <p class="table-subtitle">Daftar lengkap laporan zakat berdasarkan RT</p>
        </div>
      </div>
      <div class="table-header-right">
        <span class="table-badge">
          <i class="fas fa-list"></i>
          <%= laporanRT.length %> RT
        </span>
      </div>
    </div>

    <div class="table-content-wrapper">
      <% if (laporanRT.length === 0) { %>
        <div class="empty-state-box">
          <div class="empty-state-icon">
            <i class="fas fa-chart-bar"></i>
          </div>
          <h3 class="empty-state-title">Belum ada data laporan</h3>
          <p class="empty-state-desc">Laporan akan muncul setelah ada data muzakki</p>
          <a href="/muzakki/create" class="btn-empty-state">
            <i class="fas fa-plus mr-2"></i>
            Tambah Muzakki
          </a>
        </div>
      <% } else { %>
        <div class="table-responsive-wrapper">
          <table class="data-table">
            <thead>
              <tr>
                <th>RT</th>
                <th>Ketua RT</th>
                <th>Jumlah Muzakki</th>
                <th>Zakat Beras</th>
                <th>Kewajiban Uang</th>
                <th>Total Terkumpul</th>
                <th>Kembalian</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% laporanRT.forEach(function(rt, index) { %>
              <tr class="table-row-animated" style="animation-delay: <%= index * 0.05 %>s;">
                <td>
                  <div class="cell-content-primary">
                    <div class="rt-badge">
                      <i class="fas fa-home"></i>
                      RT <%= rt.nomor_rt %>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="cell-content-primary">
                    <div class="ketua-name">
                      <%= rt.ketua_rt %>
                    </div>
                    <div class="cell-subtitle">Ketua RT</div>
                  </div>
                </td>
                <td class="text-center">
                  <span class="badge-stat badge-stat-primary">
                    <i class="fas fa-users"></i>
                    <%= rt.total_muzakki || 0 %> orang
                  </span>
                </td>
                <td class="text-center">
                  <% if (rt.total_beras_kg && parseFloat(rt.total_beras_kg) > 0) { %>
                    <div class="amount-display amount-success">
                      <i class="fas fa-weight mr-1"></i>
                      <%= parseFloat(rt.total_beras_kg).toFixed(1) %> kg
                    </div>
                  <% } else { %>
                    <div class="text-gray-400">-</div>
                  <% } %>
                </td>
                <td class="text-center">
                  <% if (rt.total_uang_kewajiban && parseFloat(rt.total_uang_kewajiban) > 0) { %>
                    <div class="amount-display amount-info">
                      <i class="fas fa-money-bill-wave mr-1"></i>
                      Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(parseFloat(rt.total_uang_kewajiban)) %>
                    </div>
                  <% } else { %>
                    <div class="text-gray-400">-</div>
                  <% } %>
                </td>
                <td class="text-center">
                  <div class="amount-display amount-primary">
                    <i class="fas fa-coins mr-1"></i>
                    Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(rt.total_terkumpul || 0) %>
                  </div>
                </td>
                <td class="text-center">
                  <% if (rt.total_kembalian && parseFloat(rt.total_kembalian) > 0) { %>
                    <div class="amount-display amount-warning">
                      <i class="fas fa-exchange-alt mr-1"></i>
                      Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(parseFloat(rt.total_kembalian)) %>
                    </div>
                  <% } else { %>
                    <div class="text-gray-400">-</div>
                  <% } %>
                </td>
                <td class="text-center">
                  <% if (rt.total_muzakki > 0) { %>
                    <span class="status-badge status-active">
                      <i class="fas fa-check mr-1"></i>Aktif
                    </span>
                  <% } else { %>
                    <span class="status-badge status-inactive">
                      <i class="fas fa-minus mr-1"></i>Belum Ada
                    </span>
                  <% } %>
                </td>
              </tr>
              <% }); %>
            </tbody>
            <tfoot>
              <tr class="total-row">
                <td colspan="2" class="total-label">TOTAL</td>
                <td class="text-center total-value">
                  <%= laporanRT.reduce((total, rt) => total + (rt.total_muzakki || 0), 0) %> orang
                </td>
                <td class="text-center total-value total-success">
                  <%= laporanRT.reduce((total, rt) => total + (parseFloat(rt.total_beras_kg) || 0), 0).toFixed(1) %> kg
                </td>
                <td class="text-center total-value total-info">
                  Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(laporanRT.reduce((total, rt) => total + (parseFloat(rt.total_uang_kewajiban) || 0), 0)) %>
                </td>
                <td class="text-center total-value total-primary">
                  Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(laporanRT.reduce((total, rt) => total + (parseFloat(rt.total_terkumpul) || 0), 0)) %>
                </td>
                <td class="text-center total-value total-warning">
                  Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(laporanRT.reduce((total, rt) => total + (parseFloat(rt.total_kembalian) || 0), 0)) %>
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Summary Information -->
  <div class="info-cards-grid">
    <div class="info-card info-card-blue">
      <div class="info-card-header">
        <div class="info-card-icon">
          <i class="fas fa-info-circle"></i>
        </div>
        <h3 class="info-card-title">Ringkasan Zakat</h3>
      </div>
      <div class="info-card-content">
        <div class="info-item">
          <span class="info-label">Total RT:</span>
          <span class="info-value"><%= laporanRT.length %> RT</span>
        </div>
        <div class="info-item">
          <span class="info-label">RT dengan Muzakki:</span>
          <span class="info-value">
            <%= laporanRT.filter(rt => (rt.total_muzakki || 0) > 0).length %> RT
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Rata-rata per RT:</span>
          <span class="info-value">
            <% const totalMuzakki = laporanRT.reduce((total, rt) => total + (parseInt(rt.total_muzakki) || 0), 0); const avgMuzakki = laporanRT.length > 0 ? Math.round(totalMuzakki / laporanRT.length) : 0; %> 
            <%= avgMuzakki %> muzakki
          </span>
        </div>
        <div class="info-item info-item-highlight">
          <span class="info-label">Status Pengumpulan:</span>
          <span class="info-value info-value-success">
            <i class="fas fa-chart-line mr-1"></i>
            <% const rtWithMuzakki = laporanRT.filter(rt => (rt.total_muzakki || 0) > 0).length; const status = rtWithMuzakki > 0 ? 'Aktif' : 'Belum Dimulai'; %> 
            <%= status %>
          </span>
        </div>
      </div>
    </div>

    <div class="info-card info-card-green">
      <div class="info-card-header">
        <div class="info-card-icon">
          <i class="fas fa-calculator"></i>
        </div>
        <h3 class="info-card-title">Perhitungan Zakat</h3>
      </div>
      <div class="info-card-content">
        <div class="calculation-box calculation-green">
          <div class="calculation-icon">
            <i class="fas fa-weight"></i>
          </div>
          <div class="calculation-text">
            <div class="calculation-title">Zakat Beras</div>
            <div class="calculation-value">2.5 kg per jiwa</div>
          </div>
        </div>
        <div class="calculation-box calculation-blue">
          <div class="calculation-icon">
            <i class="fas fa-money-bill-wave"></i>
          </div>
          <div class="calculation-text">
            <div class="calculation-title">Zakat Uang</div>
            <div class="calculation-value">Rp 45.000 per jiwa</div>
          </div>
        </div>
        <div class="calculation-box calculation-yellow">
          <div class="calculation-icon">
            <i class="fas fa-hand-holding-usd"></i>
          </div>
          <div class="calculation-text">
            <div class="calculation-title">Infak Terkumpul</div>
            <div class="calculation-value">
              Rp <%= new Intl.NumberFormat('id-ID', { minimumFractionDigits: 0, maximumFractionDigits: 0 }).format(totalInfak) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

