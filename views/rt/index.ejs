<%- include('../layouts/header', { title: 'Data RW & RT - Zakat Fitrah App',
bodyClass: 'bg-gray-50', currentPage: 'rt' }) %>

<div class="page-wrapper">
  <!-- Modern Header -->
  <div class="page-header">
    <div class="header-content-wrapper">
      <div class="header-left-section">
        <div class="header-icon-box">
          <i class="fas fa-building"></i>
        </div>
        <div class="header-text-box">
          <h1 class="header-title-text">Data RW & RT</h1>
          <p class="header-subtitle-text">Kelola data Rukun Warga (RW) dan Rukun Tetangga (RT)</p>
        </div>
      </div>
      <div class="header-actions">
        <a href="/rw" class="btn-action btn-action-primary">
          <i class="fas fa-building mr-2"></i>
          <span>Kelola RW</span>
        </a>
        <a href="/rt/create" class="btn-action btn-action-secondary">
          <i class="fas fa-plus mr-2"></i>
          <span>Tambah RT</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-container">
    <div class="stat-box stat-box-primary">
      <div class="stat-icon-wrapper stat-icon-primary">
        <i class="fas fa-building"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text"><%= rwList.length %></div>
        <div class="stat-label-text">Total RW</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-success">
      <div class="stat-icon-wrapper stat-icon-success">
        <i class="fas fa-home"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text"><%= rwList.reduce((sum, rw) => sum + (rw.total_rt || 0), 0) %></div>
        <div class="stat-label-text">Total RT</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-info">
      <div class="stat-icon-wrapper stat-icon-info">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text"><%= rwList.reduce((sum, rw) => sum + (rw.total_muzakki || 0), 0) %></div>
        <div class="stat-label-text">Total Muzakki</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-warning">
      <div class="stat-icon-wrapper stat-icon-warning">
        <i class="fas fa-coins"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">Rp <%= Math.floor(rtList.reduce((sum, rt) => sum + (rt.total_zakat || 0), 0)).toLocaleString('id-ID') %></div>
        <div class="stat-label-text">Total Zakat</div>
      </div>
      <div class="stat-decoration"></div>
    </div>
  </div>

  <!-- RT Table Section -->
  <div class="table-section">
    <div class="table-header-wrapper">
      <div class="table-header-left">
        <div class="table-header-icon">
          <i class="fas fa-home"></i>
        </div>
        <div class="table-header-text">
          <h2 class="table-title">Daftar RT</h2>
          <p class="table-subtitle">Kelola data Rukun Tetangga (RT)</p>
        </div>
      </div>
      <div class="table-header-right">
        <span class="table-badge">
          <i class="fas fa-list"></i>
          <%= rtList.length %> RT
        </span>
      </div>
    </div>

    <div class="table-content-wrapper">
      <% if (rtList.length === 0) { %>
        <div class="empty-state-box">
          <div class="empty-state-icon">
            <i class="fas fa-home"></i>
          </div>
          <h3 class="empty-state-title">Belum ada data RT</h3>
          <p class="empty-state-desc">Mulai dengan menambahkan data RT pertama</p>
          <a href="/rt/create" class="btn-empty-state">
            <i class="fas fa-plus mr-2"></i>
            Tambah RT
          </a>
        </div>
      <% } else { %>
        <div class="table-responsive-wrapper">
          <table class="data-table">
            <thead>
              <tr>
                <th>RW</th>
                <th>RT</th>
                <th>Ketua RT</th>
                <th>Keterangan</th>
                <th>Statistik</th>
                <th>Total Zakat</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% rtList.forEach(function(rt, index) { %>
                <tr class="table-row-animated" style="animation-delay: <%= index * 0.05 %>s;">
                  <td>
                    <div class="cell-content-primary">
                      <div class="rw-badge">
                        <i class="fas fa-building"></i>
                        <%= rt.nomor_rw || '-' %>
                      </div>
                      <div class="cell-subtitle">Ketua: <%= rt.ketua_rw || '-' %></div>
                    </div>
                  </td>
                  <td>
                    <div class="cell-content-primary">
                      <div class="rt-number">RT <%= rt.nomor_rt %></div>
                      <div class="cell-subtitle">ID: <%= rt.id %></div>
                    </div>
                  </td>
                  <td>
                    <div class="cell-content-primary">
                      <div class="ketua-name"><%= rt.ketua_rt %></div>
                      <div class="cell-subtitle">Ketua RT</div>
                    </div>
                  </td>
                  <td>
                    <div class="cell-content-secondary">
                      <%= rt.keterangan || '-' %>
                    </div>
                  </td>
                  <td>
                    <div class="stats-badges-wrapper">
                      <span class="badge-stat badge-stat-primary">
                        <i class="fas fa-users"></i>
                        <%= rt.total_muzakki %> Muzakki
                      </span>
                      <div class="stats-badges-row">
                        <span class="badge-stat-sm badge-success">
                          <i class="fas fa-check"></i>
                          <%= rt.muzakki_lunas %> Lunas
                        </span>
                        <% if (rt.muzakki_belum_lunas > 0) { %>
                          <span class="badge-stat-sm badge-danger">
                            <i class="fas fa-times"></i>
                            <%= rt.muzakki_belum_lunas %> Belum
                          </span>
                        <% } %>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="amount-display">
                      Rp <%= Math.floor(rt.total_zakat).toLocaleString('id-ID') %>
                    </div>
                  </td>
                  <td>
                    <div class="action-buttons-group">
                      <a href="/rt/<%= rt.id %>/detail" class="btn-icon btn-icon-info" title="Detail RT">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/rt/<%= rt.id %>/edit" class="btn-icon btn-icon-primary" title="Edit RT">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form method="POST" action="/rt/<%= rt.id %>/delete" class="inline-form" id="delete-form-<%= rt.id %>">
                        <button type="button" class="btn-icon btn-icon-danger" title="Hapus RT" data-nomor="<%= rt.nomor_rt %>" data-id="<%= rt.id %>" onclick="confirmDeleteRT(this)">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

