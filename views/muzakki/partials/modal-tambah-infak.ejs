<!-- Modal Tambah Infak Batch -->
<div id="tambahInfakModal" class="modal-overlay-infak" style="display: none;">
  <div class="modal-container-infak">
    <!-- Modal Header -->
    <div class="modal-header-infak">
      <div class="modal-header-left">
        <div class="modal-icon-box">
          <i class="fas fa-hand-holding-heart"></i>
        </div>
        <div class="modal-title-box">
          <h3 class="modal-title">Tambah Infak Kembalian</h3>
          <p class="modal-subtitle">Pilih muzakki untuk mengkonversi kembalian menjadi infak</p>
        </div>
      </div>
      <button type="button" class="modal-close-btn" onclick="closeInfakModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body-infak">
      <!-- Search and Filter Section -->
      <div class="search-section-infak">
        <div class="search-box-infak">
          <i class="fas fa-search"></i>
          <input 
            type="text" 
            id="searchMuzakki" 
            placeholder="Cari nama muzakki..." 
            class="search-input-infak"
            onkeyup="filterMuzakki()"
          />
        </div>
        <div class="filter-stats">
          <span class="stat-badge stat-total">
            <i class="fas fa-users"></i>
            <span id="totalCount">0</span> Total
          </span>
          <span class="stat-badge stat-selected">
            <i class="fas fa-check-circle"></i>
            <span id="selectedCount">0</span> Dipilih
          </span>
        </div>
      </div>

      <!-- Select All Option -->
      <div class="select-all-box">
        <label class="checkbox-container-select-all">
          <input 
            type="checkbox" 
            id="selectAllCheckbox" 
            onchange="toggleSelectAll(this)"
          />
          <span class="checkbox-custom"></span>
          <span class="checkbox-label-bold">Pilih Semua</span>
        </label>
      </div>

      <!-- Muzakki List -->
      <form id="infakBatchForm" method="POST" action="/muzakki/rt/<%= rt.id %>/batch-infak">
        <div class="muzakki-list-infak" id="muzakkiList">
          <% 
          // Debug: Tampilkan semua data muzakki untuk analisis
          console.log('=== MODAL DEBUG ===');
          console.log('Total muzakki:', muzakki.length);
          muzakki.forEach((m, idx) => {
            console.log(`Muzakki ${idx + 1}:`, {
              id: m.id,
              nama: m.nama_muzakki_list,
              kembalian: m.kembalian,
              kembalian_type: typeof m.kembalian,
              infak_id: m.infak_id,
              jumlah_bayar: m.jumlah_bayar
            });
          });
          
          // Filter muzakki: kembalian harus ada (tidak null, tidak 0) DAN belum ada infak
          const muzakkiWithKembalian = muzakki.filter(m => {
            // Cek kembalian dengan berbagai cara untuk memastikan
            const kembalianValue = parseFloat(m.kembalian || 0);
            const hasKembalian = kembalianValue > 0;
            const noInfak = !m.infak_id || m.infak_id === null || m.infak_id === undefined;
            
            console.log(`Filter ${m.nama_muzakki_list}:`, { 
              kembalianValue, 
              hasKembalian, 
              noInfak,
              passed: hasKembalian && noInfak 
            });
            
            return hasKembalian && noInfak;
          });
          
          console.log('Filtered muzakki with kembalian:', muzakkiWithKembalian.length);
          
          if (muzakkiWithKembalian.length === 0) { 
          %>
            <div class="empty-state-infak">
              <i class="fas fa-inbox"></i>
              <p>Tidak ada muzakki dengan kembalian yang belum disedekahkan</p>
              <small style="color: #9ca3af; margin-top: 8px; display: block;">
                Total muzakki: <%= muzakki.length %><br>
                Debug: Cek browser console untuk detail
              </small>
            </div>
          <% } else { 
            muzakkiWithKembalian.forEach((item, index) => { 
          %>
            <div class="muzakki-card-infak" data-nama="<%= item.nama_muzakki_list ? item.nama_muzakki_list.toLowerCase() : '' %>">
              <label class="muzakki-checkbox-label">
                <input 
                  type="checkbox" 
                  name="muzakki_ids[]" 
                  value="<%= item.id %>" 
                  class="muzakki-checkbox"
                  data-kembalian="<%= item.kembalian %>"
                  onchange="updateSelectedCount()"
                />
                <span class="checkbox-custom-card"></span>
                
                <div class="muzakki-info-card">
                  <div class="muzakki-header-row">
                    <div class="muzakki-avatar">
                      <i class="fas fa-user"></i>
                    </div>
                    <div class="muzakki-details">
                      <div class="muzakki-name-row">
                        <h4 class="muzakki-name"><%= item.nama_muzakki_list || '-' %></h4>
                        <div class="muzakki-badge-count">
                          <i class="fas fa-users"></i>
                          <%= item.jumlah_muzakki %> jiwa
                        </div>
                      </div>
                      <div class="muzakki-meta-row">
                        <span class="meta-item">
                          <i class="fas fa-calendar"></i>
                          <%= new Date(item.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                        </span>
                        <span class="meta-item">
                          <i class="fas fa-user-tie"></i>
                          <%= item.pencatat_name %>
                        </span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="muzakki-financial-info">
                    <div class="financial-row">
                      <div class="financial-item">
                        <span class="financial-label">Jumlah Bayar</span>
                        <span class="financial-value">
                          Rp <%= Math.floor(item.jumlah_bayar || 0).toLocaleString('id-ID') %>
                        </span>
                      </div>
                      <div class="financial-item">
                        <span class="financial-label">Jumlah Jiwa</span>
                        <span class="financial-value">
                          <%= item.jumlah_jiwa || 0 %> jiwa
                        </span>
                      </div>
                    </div>
                    <div class="kembalian-highlight">
                      <span class="kembalian-label">
                        <i class="fas fa-money-bill-wave"></i>
                        Kembalian
                      </span>
                      <span class="kembalian-amount">
                        Rp <%= Math.floor(item.kembalian || 0).toLocaleString('id-ID') %>
                      </span>
                    </div>
                  </div>

                  <!-- Keterangan Input -->
                  <div class="keterangan-input-box">
                    <label class="keterangan-label">
                      <i class="fas fa-comment-dots"></i>
                      Keterangan (opsional)
                    </label>
                    <input 
                      type="text" 
                      name="keterangan_<%= item.id %>" 
                      class="keterangan-input"
                      placeholder="Tambahkan catatan untuk infak ini..."
                    />
                  </div>
                </div>
              </label>
            </div>
          <% 
            });
          } 
          %>
        </div>

        <!-- Modal Footer / Actions -->
        <div class="modal-footer-infak">
          <div class="footer-summary">
            <div class="summary-item">
              <span class="summary-label">Total Kembalian Dipilih:</span>
              <span class="summary-value" id="totalKembalianSelected">Rp 0</span>
            </div>
          </div>
          <div class="footer-actions">
            <button type="button" class="btn-cancel-infak" onclick="closeInfakModal()">
              <i class="fas fa-times"></i>
              Batal
            </button>
            <button type="submit" class="btn-submit-infak" id="btnSubmitInfak" disabled>
              <i class="fas fa-paper-plane"></i>
              Simpan Infak (<span id="submitCount">0</span>)
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

