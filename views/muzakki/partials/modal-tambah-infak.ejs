// Open Modal
function openInfakModal() {
  document.getElementById('tambahInfakModal').style.display = 'flex';
  document.body.style.overflow = 'hidden';
  updateSelectedCount();
  updateTotalCount();
  
  // Debug saat modal dibuka
  console.log('Modal dibuka, total cards:', document.querySelectorAll('.muzakki-card-infak').length);
}

// Close Modal
function closeInfakModal() {
  document.getElementById('tambahInfakModal').style.display = 'none';
  document.body.style.overflow = 'auto';
  // Reset form
  document.getElementById('infakBatchForm').reset();
  document.getElementById('selectAllCheckbox').checked = false;
  updateSelectedCount();
}

// Close on ESC key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeInfakModal();
  }
});

// Close on overlay click
document.getElementById('tambahInfakModal')?.addEventListener('click', function(e) {
  if (e.target === this) {
    closeInfakModal();
  }
});

// Filter Muzakki
function filterMuzakki() {
  const searchValue = document.getElementById('searchMuzakki').value.toLowerCase();
  const cards = document.querySelectorAll('.muzakki-card-infak');
  
  cards.forEach(card => {
    const nama = card.getAttribute('data-nama') || '';
    if (nama.includes(searchValue)) {
      card.style.display = 'block';
    } else {
      card.style.display = 'none';
    }
  });
}

// Toggle Select All
function toggleSelectAll(checkbox) {
  const checkboxes = document.querySelectorAll('.muzakki-checkbox');
  const visibleCards = Array.from(document.querySelectorAll('.muzakki-card-infak'))
    .filter(card => card.style.display !== 'none');
  
  visibleCards.forEach(card => {
    const cb = card.querySelector('.muzakki-checkbox');
    if (cb) {
      cb.checked = checkbox.checked;
    }
  });
  
  updateSelectedCount();
}

// Update Selected Count
function updateSelectedCount() {
  const checkboxes = document.querySelectorAll('.muzakki-checkbox:checked');
  const count = checkboxes.length;
  
  document.getElementById('selectedCount').textContent = count;
  document.getElementById('submitCount').textContent = count;
  
  const submitBtn = document.getElementById('btnSubmitInfak');
  submitBtn.disabled = count === 0;
  
  // Calculate total kembalian
  let totalKembalian = 0;
  checkboxes.forEach(cb => {
    const kembalian = parseFloat(cb.getAttribute('data-kembalian')) || 0;
    totalKembalian += kembalian;
  });
  
  document.getElementById('totalKembalianSelected').textContent = 
    'Rp ' + Math.floor(totalKembalian).toLocaleString('id-ID');
}

// Update Total Count
function updateTotalCount() {
  const cards = document.querySelectorAll('.muzakki-card-infak');
  document.getElementById('totalCount').textContent = cards.length;
}

// Form Submit Handler
document.getElementById('infakBatchForm')?.addEventListener('submit', function(e) {
  const checkedBoxes = document.querySelectorAll('.muzakki-checkbox:checked');
  
  if (checkedBoxes.length === 0) {
    e.preventDefault();
    alert('Pilih minimal 1 muzakki untuk ditambahkan sebagai infak');
    return false;
  }
  
  // Confirm before submit
  const confirmed = confirm(
    `Anda akan menambahkan ${checkedBoxes.length} infak dari kembalian.\n\nLanjutkan?`
  );
  
  if (!confirmed) {
    e.preventDefault();
    return false;
  }
});
</script>
