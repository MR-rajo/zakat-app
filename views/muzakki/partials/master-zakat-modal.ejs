            <h3 class="form-card-title" id="formTitle">Tambah Jenis Zakat</h3>
            <button type="button" class="btn-cancel-form" onclick="hideForm()">
              <i class="fas fa-times mr-1"></i>Batal
            </button>
          </div>
          <form id="zakatForm" onsubmit="handleSubmit(event)">
            <input type="hidden" id="zakat_id" name="id">
            <div class="form-grid-modal">
              <div class="form-group-modal">
                <label for="zakat_nama" class="form-label-modal">
                  <i class="fas fa-tag mr-1"></i>Nama Jenis Zakat <span class="text-red">*</span>
                </label>
                <input type="text" id="zakat_nama" name="nama" required 
                       class="form-input-modal" 
                       placeholder="Contoh: Beras Premium, Uang Standar">
              </div>

              <div class="form-group-modal">
                <label for="zakat_harga" class="form-label-modal">
                  <i class="fas fa-money-bill-wave mr-1"></i>Harga per Jiwa (Rp) <span class="text-red">*</span>
                </label>
                <div class="input-with-prefix-modal">
                  <span class="input-prefix-modal">Rp</span>
                  <input type="text" id="zakat_harga_display" 
                         class="form-input-modal input-with-prefix-field-modal" 
                         placeholder="0" required>
                  <input type="hidden" id="zakat_harga" name="harga">
                </div>
              </div>

              <div class="form-group-modal">
                <label for="zakat_kg" class="form-label-modal">
                  <i class="fas fa-weight mr-1"></i>Kilogram (kg) <span class="text-red">*</span>
                </label>
                <input type="number" id="zakat_kg" name="kg" required 
                       class="form-input-modal" step="0.1" min="0"
                       placeholder="Contoh: 2.5 (isi 0 untuk zakat uang)">
                <p class="form-hint-modal">Isi 0 untuk zakat berbentuk uang, atau isi jumlah kg untuk zakat beras</p>
