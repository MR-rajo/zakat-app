<!-- Master Zakat Modal -->
<div id="masterZakatModal" class="modal-overlay">
  <div class="modal-container">
    <!-- Modal Header -->
    <div class="modal-header">
      <div class="modal-header-left">
        <div class="modal-header-icon">
          <i class="fas fa-database"></i>
        </div>
        <div>
          <h2 class="modal-title">Master Data Zakat</h2>
          <p class="modal-subtitle">Kelola jenis dan harga zakat fitrah</p>
        </div>
      </div>
      <button type="button" class="modal-close-btn" onclick="closeMasterZakatModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="modal-body">
      <!-- Add New Button -->
      <div class="modal-action-bar">
        <button type="button" class="btn-modal-primary" onclick="showAddForm()">
          <i class="fas fa-plus mr-2"></i>
          <span>Tambah Jenis Zakat</span>
        </button>
      </div>

      <!-- Form Section (Hidden by default) -->
      <div id="zakatFormSection" class="zakat-form-section" style="display: none;">
        <div class="form-card-modal">
