<script>
  // Global variables
  let masterZakatData = [];
  let editingZakatId = null;

  // Open Modal
  function openMasterZakatModal() {
    document.getElementById('masterZakatModal').classList.add('active');
    document.body.style.overflow = 'hidden';
    loadMasterZakat();
  }

  // Close Modal
  function closeMasterZakatModal() {
    document.getElementById('masterZakatModal').classList.remove('active');
    document.body.style.overflow = '';
    hideForm();
  }

  // Show Add Form
  function showAddForm() {
    document.getElementById('zakatFormSection').style.display = 'block';
    document.getElementById('formTitle').textContent = 'Tambah Jenis Zakat';
    document.getElementById('submitBtnText').textContent = 'Simpan';
    document.getElementById('zakatForm').reset();
    document.getElementById('zakat_id').value = '';
    document.getElementById('zakat_harga').value = '';
    document.getElementById('zakat_harga_display').value = '';
    editingZakatId = null;
  }

  // Hide Form
  function hideForm() {
    document.getElementById('zakatFormSection').style.display = 'none';
    document.getElementById('zakatForm').reset();
    editingZakatId = null;
  }

  // Load Master Zakat Data
  async function loadMasterZakat() {
    try {
      const response = await fetch('/muzakki/api/master-zakat');
      const data = await response.json();
      
      if (data.success) {
        masterZakatData = data.data;
        renderTable();
      } else {
        throw new Error(data.message || 'Gagal memuat data');
      }
    } catch (error) {
      console.error('Error loading master zakat:', error);
      document.getElementById('masterZakatTableBody').innerHTML = `
        <tr>
          <td colspan="6" class="text-center">
            <div style="padding: 40px 20px; color: #ef4444;">
              <i class="fas fa-exclamation-triangle"></i> Gagal memuat data: ${error.message}
            </div>
          </td>
        </tr>
      `;
    }
  }

  // Render Table
  function renderTable() {
    const tbody = document.getElementById('masterZakatTableBody');
    
    if (masterZakatData.length === 0) {
      tbody.innerHTML = `
        <tr>
          <td colspan="6" class="text-center">
            <div style="padding: 40px 20px; color: #6b7280;">
              <i class="fas fa-inbox"></i> Belum ada data jenis zakat
            </div>
          </td>
        </tr>
      `;
      return;
    }

    tbody.innerHTML = masterZakatData.map((item, index) => {
      const tipe = parseFloat(item.kg) > 0 ? 'beras' : 'uang';
      const tipeBadge = tipe === 'beras' 
        ? '<span class="badge-tipe badge-tipe-beras"><i class="fas fa-seedling"></i> Beras</span>'
        : '<span class="badge-tipe badge-tipe-uang"><i class="fas fa-coins"></i> Uang</span>';
      
      return `
        <tr>
          <td class="text-center">${index + 1}</td>
          <td><strong>${item.nama}</strong></td>
          <td>Rp ${parseFloat(item.harga).toLocaleString('id-ID')}</td>
          <td>${parseFloat(item.kg) > 0 ? parseFloat(item.kg) + ' kg' : '-'}</td>
          <td>${tipeBadge}</td>
          <td>
            <button class="btn-table-edit" onclick="editZakat(${item.id})">
              <i class="fas fa-edit"></i> Edit
            </button>
            <button class="btn-table-delete" onclick="deleteZakat(${item.id}, '${item.nama}')">
              <i class="fas fa-trash"></i> Hapus
            </button>
          </td>
        </tr>
      `;
    }).join('');
  }

  // Handle Form Submit
  async function handleSubmit(e) {
    e.preventDefault();
    
    const formData = {
      nama: document.getElementById('zakat_nama').value,
      harga: parseFloat(document.getElementById('zakat_harga').value) || 0,
      kg: parseFloat(document.getElementById('zakat_kg').value) || 0,
    };

    // Show loading
    const loadingOverlay = document.getElementById('loadingOverlay');
    const submitBtn = document.querySelector('#zakatForm button[type="submit"]');
    
    loadingOverlay.classList.add('active');
    submitBtn.disabled = true;

    try {
      let response;
      if (editingZakatId) {
        // Update
        response = await fetch(`/muzakki/api/master-zakat/${editingZakatId}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });
      } else {
        // Create
        response = await fetch('/muzakki/api/master-zakat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });
      }

      const result = await response.json();
      
      // Hide loading
      loadingOverlay.classList.remove('active');
      submitBtn.disabled = false;
      
      if (result.success) {
        if (typeof Swal !== 'undefined') {
          await Swal.fire({
            icon: 'success',
            title: 'Berhasil!',
            text: result.message,
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false,
            customClass: {
              container: 'swal2-container-high-zindex'
            }
          });
        } else {
          alert(result.message);
        }
        
        hideForm();
        loadMasterZakat();
      } else {
        throw new Error(result.message || 'Gagal menyimpan data');
      }
    } catch (error) {
      // Hide loading
      loadingOverlay.classList.remove('active');
      submitBtn.disabled = false;
      
      console.error('Error saving master zakat:', error);
      if (typeof Swal !== 'undefined') {
        Swal.fire({
          icon: 'error',
          title: 'Gagal!',
          text: error.message,
          customClass: {
            container: 'swal2-container-high-zindex'
          }
        });
      } else {
        alert('Gagal menyimpan data: ' + error.message);
      }
    }
  }

  // Edit Zakat
  function editZakat(id) {
    const zakat = masterZakatData.find(z => z.id === id);
    if (!zakat) return;

    editingZakatId = id;
    document.getElementById('zakatFormSection').style.display = 'block';
    document.getElementById('formTitle').textContent = 'Edit Jenis Zakat';
    document.getElementById('submitBtnText').textContent = 'Update';
    
    document.getElementById('zakat_id').value = zakat.id;
    document.getElementById('zakat_nama').value = zakat.nama;
    document.getElementById('zakat_harga').value = zakat.harga;
    document.getElementById('zakat_harga_display').value = parseFloat(zakat.harga).toLocaleString('id-ID');
    document.getElementById('zakat_kg').value = zakat.kg;

    // Scroll to form
    document.getElementById('zakatFormSection').scrollIntoView({ behavior: 'smooth', block: 'start' });
  }

  // Delete Zakat
  async function deleteZakat(id, nama) {
    const confirmDelete = typeof Swal !== 'undefined' 
      ? await Swal.fire({
          title: 'Konfirmasi Hapus',
          text: `Yakin ingin menghapus "${nama}"? Data yang sudah terhubung akan terpengaruh.`,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#ef4444',
          cancelButtonColor: '#6b7280',
          confirmButtonText: 'Ya, Hapus',
          cancelButtonText: 'Batal',
          reverseButtons: true,
          customClass: {
            container: 'swal2-container-high-zindex'
          }
        })
      : { isConfirmed: confirm(`Yakin ingin menghapus "${nama}"?`) };

    if (!confirmDelete.isConfirmed) return;

    // Show loading
    const loadingOverlay = document.getElementById('loadingOverlay');
    loadingOverlay.classList.add('active');

    try {
      const response = await fetch(`/muzakki/api/master-zakat/${id}`, {
        method: 'DELETE'
      });

      const result = await response.json();
      
      // Hide loading
      loadingOverlay.classList.remove('active');
      
      if (result.success) {
        if (typeof Swal !== 'undefined') {
          await Swal.fire({
            icon: 'success',
            title: 'Terhapus!',
            text: result.message,
            timer: 2000,
            timerProgressBar: true,
            showConfirmButton: false,
            customClass: {
              container: 'swal2-container-high-zindex'
            }
          });
        } else {
          alert(result.message);
        }
        
        loadMasterZakat();
      } else {
        throw new Error(result.message || 'Gagal menghapus data');
      }
    } catch (error) {
      // Hide loading
      loadingOverlay.classList.remove('active');
      
      console.error('Error deleting master zakat:', error);
      if (typeof Swal !== 'undefined') {
        Swal.fire({
          icon: 'error',
          title: 'Gagal!',
          text: error.message,
          customClass: {
            container: 'swal2-container-high-zindex'
          }
        });
      } else {
        alert('Gagal menghapus data: ' + error.message);
      }
    }
  }

  // Rupiah Input Handlers
  document.addEventListener('DOMContentLoaded', function() {
    const hargaDisplay = document.getElementById('zakat_harga_display');
    const hargaHidden = document.getElementById('zakat_harga');

    if (hargaDisplay) {
      hargaDisplay.addEventListener('input', function() {
        const numericValue = this.value.replace(/[^\d]/g, '');
        const numberValue = parseInt(numericValue) || 0;
        this.value = numberValue.toLocaleString('id-ID');
        hargaHidden.value = numberValue;
      });

      hargaDisplay.addEventListener('focus', function() {
        const value = hargaHidden.value;
        if (value && value !== '0') {
          this.value = value;
          setTimeout(() => this.select(), 50);
        }
      });

      hargaDisplay.addEventListener('blur', function() {
        const numericValue = this.value.replace(/[^\d]/g, '');
        const numberValue = parseInt(numericValue) || 0;
        this.value = numberValue.toLocaleString('id-ID');
        hargaHidden.value = numberValue;
      });
    }
  });

  // Close modal on ESC key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('masterZakatModal').classList.contains('active')) {
      closeMasterZakatModal();
    }
  });

  // Close modal on overlay click
  document.getElementById('masterZakatModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
      closeMasterZakatModal();
    }
  });
</script>
