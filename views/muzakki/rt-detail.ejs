    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    color: white;
  }

  .header-text-box { color: white; }

  .header-title-text {
    font-size: 28px;
    font-weight: 700;
    margin: 0 0 4px 0;
    color: white;
  }

  .header-subtitle-text {
    font-size: 15px;
    margin: 0;
    color: rgba(255, 255, 255, 0.95);
  }

  .header-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .btn-action {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
