<script>
  // Data muzakki untuk filtering (from EJS)
  const allMuzakkiData = [
    <% muzakki.forEach(function(item, index) { %>
      {
        id: <%= item.id %>,
        created_at: '<%= item.created_at %>',
        jumlah_jiwa: <%= item.jumlah_jiwa || 0 %>,
        jumlah_uang: <%= parseFloat(item.jumlah_uang) || 0 %>,
        kembalian: <%= parseFloat(item.kembalian) || 0 %>,
        jumlah_beras_kg: <%= parseFloat(item.jumlah_beras_kg) || 0 %>
      }<%= index < muzakki.length - 1 ? ',' : '' %>
    <% }); %>
  ];

  // Combined filter functionality (search + date)
  function applyFilters() {
    const searchInput = document.getElementById('filter_search');
    const startDateInput = document.getElementById('filter_start_date');
    const endDateInput = document.getElementById('filter_end_date');
    const filterInfo = document.getElementById('filter_info');
    const filterInfoText = document.getElementById('filter_info_text');

    const searchQuery = searchInput.value.toLowerCase().trim();
    const startDate = startDateInput.value ? new Date(startDateInput.value) : null;
    const endDate = endDateInput.value ? new Date(endDateInput.value) : null;

    // Validasi tanggal
    if (startDate && endDate && startDate > endDate) {
      Swal.fire({
        icon: 'error',
        title: 'Tanggal Tidak Valid',
        text: 'Tanggal mulai tidak boleh lebih besar dari tanggal akhir',
        confirmButtonColor: '#6366f1'
      });
      return;
    }

    // Set end date to end of day for proper comparison
    if (endDate) {
      endDate.setHours(23, 59, 59, 999);
    }

    let filteredCount = 0;
    let totalJiwa = 0;
    let totalUang = 0;
    let totalKembalian = 0;

    // Filter desktop table rows
    const desktopRows = document.querySelectorAll('.desktop-view tbody tr');
    desktopRows.forEach((row, index) => {
      const rowData = allMuzakkiData[index];
      if (!rowData) return;

      const rowDate = new Date(rowData.created_at);
      const muzakkiContainer = row.querySelector('.muzakki-names-container');
      const namesString = muzakkiContainer ? muzakkiContainer.getAttribute('data-names') : '';
      
      let shouldShow = true;

      // Filter by date
      if (startDate && rowDate < startDate) {
        shouldShow = false;
      }
      if (endDate && rowDate > endDate) {
        shouldShow = false;
      }

      // Filter by search query
      if (searchQuery && shouldShow) {
        const namesLower = namesString.toLowerCase();
        if (!namesLower.includes(searchQuery)) {
          shouldShow = false;
        }
      }

      if (shouldShow) {
        row.style.display = '';
        filteredCount++;
        totalJiwa += rowData.jumlah_jiwa;
        totalUang += rowData.jumlah_uang;
        totalKembalian += rowData.kembalian;
      } else {
        row.style.display = 'none';
      }
    });

    // Filter mobile cards
    const mobileCards = document.querySelectorAll('.mobile-view .mobile-card');
    mobileCards.forEach((card, index) => {
      const rowData = allMuzakkiData[index];
      if (!rowData) return;

      const rowDate = new Date(rowData.created_at);
      const muzakkiContainer = card.querySelector('.muzakki-names-container-mobile');
      const namesString = muzakkiContainer ? muzakkiContainer.getAttribute('data-names') : '';
      
      let shouldShow = true;

      // Filter by date
      if (startDate && rowDate < startDate) {
        shouldShow = false;
      }
      if (endDate && rowDate > endDate) {
        shouldShow = false;
      }

      // Filter by search query
      if (searchQuery && shouldShow) {
        const namesLower = namesString.toLowerCase();
        if (!namesLower.includes(searchQuery)) {
          shouldShow = false;
        }
      }

      card.style.display = shouldShow ? '' : 'none';
    });

    // Update statistics
    updateStatistics(totalJiwa, totalUang, totalKembalian);

    // Show filter info
    let hasActiveFilter = searchQuery || startDate || endDate;
    
    if (hasActiveFilter) {
      let infoText = 'Menampilkan data';
      let filterDetails = [];
      
      if (searchQuery) {
        filterDetails.push(`dengan nama "${searchQuery}"`);
      }
      
      if (startDate && endDate) {
        filterDetails.push(`dari ${formatDate(startDate)} sampai ${formatDate(endDate)}`);
      } else if (startDate) {
        filterDetails.push(`mulai ${formatDate(startDate)}`);
      } else if (endDate) {
        filterDetails.push(`sampai ${formatDate(endDate)}`);
      }
      
      if (filterDetails.length > 0) {
        infoText += ' ' + filterDetails.join(' ');
      }
      
      infoText += ` (${filteredCount} data)`;
      filterInfoText.textContent = infoText;
      filterInfo.style.display = 'flex';
    } else {
      filterInfo.style.display = 'none';
    }
  }

  // Keep original applyDateFilter for backward compatibility
  function applyDateFilter() {
    applyFilters();
    
    // Show notification
    const searchInput = document.getElementById('filter_search');
    const searchQuery = searchInput.value.toLowerCase().trim();
    const filteredCount = document.querySelectorAll('.desktop-view tbody tr[style=""]').length;
    
    Swal.fire({
      icon: 'success',
      title: 'Filter Diterapkan',
      text: `Menampilkan ${filteredCount} dari ${allMuzakkiData.length} data`,
      timer: 1500,
      showConfirmButton: false
    });
  }

  // Filter functionality (legacy - kept for compatibility)
  function applyDateFilterOld() {
    const startDateInput = document.getElementById('filter_start_date');
    const endDateInput = document.getElementById('filter_end_date');
    const filterInfo = document.getElementById('filter_info');
    const filterInfoText = document.getElementById('filter_info_text');

    const startDate = startDateInput.value ? new Date(startDateInput.value) : null;
    const endDate = endDateInput.value ? new Date(endDateInput.value) : null;

    // Validasi tanggal
    if (startDate && endDate && startDate > endDate) {
      Swal.fire({
        icon: 'error',
        title: 'Tanggal Tidak Valid',
        text: 'Tanggal mulai tidak boleh lebih besar dari tanggal akhir',
        confirmButtonColor: '#6366f1'
      });
      return;
    }

    // Set end date to end of day for proper comparison
    if (endDate) {
      endDate.setHours(23, 59, 59, 999);
    }

    let filteredCount = 0;
    let totalJiwa = 0;
    let totalUang = 0;
    let totalKembalian = 0;

    // Filter desktop table rows
    const desktopRows = document.querySelectorAll('.desktop-view tbody tr');
    desktopRows.forEach((row, index) => {
      const rowData = allMuzakkiData[index];
      if (!rowData) return;

      const rowDate = new Date(rowData.created_at);
      let shouldShow = true;

      if (startDate && rowDate < startDate) {
        shouldShow = false;
      }
      if (endDate && rowDate > endDate) {
        shouldShow = false;
      }

      if (shouldShow) {
        row.style.display = '';
        filteredCount++;
        totalJiwa += rowData.jumlah_jiwa;
        totalUang += rowData.jumlah_uang;
        totalKembalian += rowData.kembalian;
      } else {
        row.style.display = 'none';
      }
    });

    // Filter mobile cards
    const mobileCards = document.querySelectorAll('.mobile-view .mobile-card');
    mobileCards.forEach((card, index) => {
      const rowData = allMuzakkiData[index];
      if (!rowData) return;

      const rowDate = new Date(rowData.created_at);
      let shouldShow = true;

      if (startDate && rowDate < startDate) {
        shouldShow = false;
      }
      if (endDate && rowDate > endDate) {
        shouldShow = false;
      }

      card.style.display = shouldShow ? '' : 'none';
    });

    // Update statistics
    updateStatistics(totalJiwa, totalUang, totalKembalian);

    // Show filter info
    if (startDate || endDate) {
      let infoText = 'Menampilkan data ';
      if (startDate && endDate) {
        infoText += `dari ${formatDate(startDate)} sampai ${formatDate(endDate)}`;
      } else if (startDate) {
        infoText += `mulai ${formatDate(startDate)}`;
      } else if (endDate) {
        infoText += `sampai ${formatDate(endDate)}`;
      }
      infoText += ` (${filteredCount} data)`;
      filterInfoText.textContent = infoText;
      filterInfo.style.display = 'flex';
    } else {
      filterInfo.style.display = 'none';
    }

    // Show notification
    Swal.fire({
      icon: 'success',
      title: 'Filter Diterapkan',
      text: `Menampilkan ${filteredCount} dari ${allMuzakkiData.length} data`,
      timer: 1500,
      showConfirmButton: false
    });
  }

  function resetFilter() {
    const searchInput = document.getElementById('filter_search');
    const startDateInput = document.getElementById('filter_start_date');
    const endDateInput = document.getElementById('filter_end_date');
    const filterInfo = document.getElementById('filter_info');

    // Reset inputs
    searchInput.value = '';
    startDateInput.value = '';
    endDateInput.value = '';

    // Show all rows
    const desktopRows = document.querySelectorAll('.desktop-view tbody tr');
    desktopRows.forEach(row => {
      row.style.display = '';
    });

    const mobileCards = document.querySelectorAll('.mobile-view .mobile-card');
    mobileCards.forEach(card => {
      card.style.display = '';
    });

    // Reset statistics to original
    let totalJiwa = 0;
    let totalUang = 0;
    let totalKembalian = 0;

    allMuzakkiData.forEach(data => {
      totalJiwa += data.jumlah_jiwa;
      totalUang += data.jumlah_uang;
      totalKembalian += data.kembalian;
    });

    updateStatistics(totalJiwa, totalUang, totalKembalian);

    // Hide filter info
    filterInfo.style.display = 'none';

    Swal.fire({
      icon: 'info',
      title: 'Filter Direset',
      text: 'Menampilkan semua data',
      timer: 1500,
      showConfirmButton: false
    });
  }

  function updateStatistics(totalJiwa, totalUang, totalKembalian) {
    // Update Total Jiwa
    const jiwaElement = document.querySelector('.stat-box-purple .stat-value-text');
    if (jiwaElement) {
      jiwaElement.textContent = totalJiwa;
    }

    // Update Total Kewajiban Uang
    const uangElement = document.querySelector('.stat-box-cyan .stat-value-text');
    if (uangElement) {
      uangElement.textContent = 'Rp ' + Math.floor(totalUang).toLocaleString('id-ID');
    }

    // Update Total Kembalian
    const kembalianElement = document.querySelector('.stat-box-warning .stat-value-text');
    if (kembalianElement) {
      kembalianElement.textContent = 'Rp ' + Math.floor(totalKembalian).toLocaleString('id-ID');
    }
  }

  function formatDate(date) {
    const options = { year: 'numeric', month: 'long', day: 'numeric' };
    return date.toLocaleDateString('id-ID', options);
  }

  // Parse and display muzakki names
  function parseMuzakkiNames(namesString) {
    if (!namesString || namesString === '-') return [];
    // Split by comma or newline
    return namesString.split(/[,\n]/).map(name => name.trim()).filter(name => name);
  }

  function displayMuzakkiNames(container, namesString, itemId, isMobile = false) {
    const names = parseMuzakkiNames(namesString);
    
    if (names.length === 0) {
      container.innerHTML = '<div class="muzakki-name-single">-</div>';
      return;
    }

    if (names.length === 1) {
      container.innerHTML = `<div class="muzakki-name-single">${names[0]}</div>`;
      return;
    }

    // Show max 4 names
    const maxDisplay = 4;
    const displayNames = names.slice(0, maxDisplay);
    const hasMore = names.length > maxDisplay;

    const listClass = isMobile ? 'muzakki-names-list-mobile' : 'muzakki-names-list';
    let html = `<ol class="${listClass}">`;
    
    displayNames.forEach((name, index) => {
      html += `<li>${index + 1}. ${name}</li>`;
    });
    
    html += '</ol>';

    if (hasMore) {
      const remaining = names.length - maxDisplay;
      html += `
        <button type="button" class="btn-show-more-names" onclick="showAllMuzakkiNames('${itemId}', '${namesString.replace(/'/g, "\\'")}')">>
          <i class="fas fa-eye"></i>
          <span>Lihat ${remaining} lainnya</span>
        </button>
      `;
    }

    container.innerHTML = html;
  }

  function showAllMuzakkiNames(itemId, namesString) {
    const names = parseMuzakkiNames(namesString);
    
    let listHtml = '<ol style="text-align: left; padding-left: 20px; margin: 10px 0;">';
    names.forEach((name, index) => {
      listHtml += `<li style="margin-bottom: 8px; font-size: 14px; color: #111827;">${name}</li>`;
    });
    listHtml += '</ol>';

    Swal.fire({
      title: 'Daftar Lengkap Muzakki',
      html: `
        <div style="max-height: 400px; overflow-y: auto;">
          <p style="color: #6b7280; font-size: 13px; margin-bottom: 10px;">Total: ${names.length} orang</p>
          ${listHtml}
        </div>
      `,
      icon: 'info',
      confirmButtonColor: '#6366f1',
      confirmButtonText: '<i class="fas fa-check"></i> Tutup',
      width: '500px'
    });
  }

  // Event listeners for filter
  document.addEventListener('DOMContentLoaded', function() {
    const btnApplyFilter = document.getElementById('btn_apply_filter');
    const btnResetFilter = document.getElementById('btn_reset_filter');
    const searchInput = document.getElementById('filter_search');
    const startDateInput = document.getElementById('filter_start_date');
    const endDateInput = document.getElementById('filter_end_date');

    // Populate muzakki names on page load
    document.querySelectorAll('.muzakki-names-container').forEach(container => {
      const namesString = container.getAttribute('data-names');
      const itemId = container.getAttribute('data-id');
      displayMuzakkiNames(container, namesString, itemId, false);
    });

    document.querySelectorAll('.muzakki-names-container-mobile').forEach(container => {
      const namesString = container.getAttribute('data-names');
      const itemId = container.getAttribute('data-id');
      displayMuzakkiNames(container, namesString, itemId, true);
    });

    // Real-time search
    if (searchInput) {
      searchInput.addEventListener('input', function() {
        applyFilters();
      });
    }

    if (btnApplyFilter) {
      btnApplyFilter.addEventListener('click', applyDateFilter);
    }

    if (btnResetFilter) {
      btnResetFilter.addEventListener('click', resetFilter);
    }

    // Apply filter on Enter key
    if (startDateInput) {
      startDateInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') applyDateFilter();
      });
    }

    if (endDateInput) {
      endDateInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') applyDateFilter();
      });
    }
  });

  // Confirm Delete with SweetAlert2
  function confirmDelete(btn) {
    const form = btn.closest('form');
    const name = form.getAttribute('data-name') || 'muzakki ini';
    
    Swal.fire({
      title: 'Konfirmasi Hapus',
      text: `Yakin ingin menghapus data "${name}"? Data ini tidak dapat dikembalikan.`,
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#ef4444',
      cancelButtonColor: '#6b7280',
      confirmButtonText: '<i class="fas fa-trash mr-2"></i>Ya, Hapus',
      cancelButtonText: '<i class="fas fa-times mr-2"></i>Batal',
      reverseButtons: true
    }).then((result) => {
      if (result.isConfirmed) {
        form.submit();
      }
    });
  }

  // Handle sedekah forms with SweetAlert2
  document.querySelectorAll(".sedekah-form").forEach((form) => {
    form.addEventListener("submit", function (e) {
      e.preventDefault();
      const formElement = this;

      Swal.fire({
        title: 'Sedekahkan Kembalian?',
        text: 'Kembalian akan disedekahkan sebagai infak. Lanjutkan?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#10b981',
        cancelButtonColor: '#6b7280',
        confirmButtonText: '<i class="fas fa-hand-holding-heart mr-2"></i>Ya, Sedekahkan',
        cancelButtonText: '<i class="fas fa-times mr-2"></i>Batal',
        reverseButtons: true
      }).then((result) => {
        if (result.isConfirmed) {
          formElement.submit();
        }
      });
    });
  });

  // Add entrance animations on load
  document.addEventListener('DOMContentLoaded', function() {
    const statBoxes = document.querySelectorAll('.stat-box');
    statBoxes.forEach((box, index) => {
      box.style.opacity = '0';
      box.style.transform = 'translateY(20px)';
      setTimeout(() => {
        box.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
        box.style.opacity = '1';
        box.style.transform = 'translateY(0)';
      }, index * 100);
    });

    // Animate mobile cards
    const mobileCards = document.querySelectorAll('.mobile-card');
    mobileCards.forEach((card, index) => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(20px)';
      setTimeout(() => {
        card.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
        card.style.opacity = '1';
        card.style.transform = 'translateY(0)';
      }, index * 80);
    });
  });
</script>

