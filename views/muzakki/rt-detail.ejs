    display: flex;
    align-items: center;
    gap: 16px;
  }

  .btn-back {
    width: 44px;
    height: 44px;
    background: rgba(255,255,255,0.2);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 18px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-back:hover {
    background: rgba(255,255,255,0.3);
