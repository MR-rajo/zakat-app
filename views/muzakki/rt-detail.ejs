<%- include('../layouts/header', { title: 'Detail RT - Zakat Fitrah App',
bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'muzakki' }) %>

<div class="page-wrapper">
  <!-- Modern Header -->
  <div class="page-header">
    <div class="header-content-wrapper">
      <div class="header-left-section">
        <a href="/muzakki" class="btn-back" title="Kembali">
          <i class="fas fa-arrow-left"></i>
        </a>
        <div class="header-icon-box">
          <i class="fas fa-users"></i>
        </div>
        <div class="header-text-box">
          <h1 class="header-title-text">Detail Muzakki RT <%= rt.nomor_rt %></h1>
          <p class="header-subtitle-text">Ketua RT: <%= rt.ketua_rt %></p>
        </div>
      </div>
      <div class="header-actions">
        <a href="/muzakki/create" class="btn-action btn-action-primary">
          <i class="fas fa-plus mr-2"></i>
          <span>Tambah Muzakki</span>
        </a>
        <a href="/muzakki" class="btn-action btn-action-secondary">
          <i class="fas fa-list mr-2"></i>
          <span>Daftar RT</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-container">

    <div class="stat-box stat-box-purple">
      <div class="stat-icon-wrapper stat-icon-purple">
        <i class="fas fa-user-friends"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text"><%= muzakki.reduce((total, m) => total + (parseInt(m.jumlah_jiwa) || 0), 0) %></div>
        <div class="stat-label-text">Total Jiwa</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

       <div class="stat-box stat-box-cyan">
      <div class="stat-icon-wrapper stat-icon-cyan">
        <i class="fas fa-money-bill-wave"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">Rp <%= Math.floor(muzakki.reduce((total, m) => total + (parseFloat(m.jumlah_uang) || 0), 0)).toLocaleString('id-ID') %></div>
        <div class="stat-label-text">Total Kewajiban Uang</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-warning">
      <div class="stat-icon-wrapper stat-icon-warning">
        <i class="fas fa-hand-holding-usd"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">Rp <%= Math.floor(muzakki.reduce((total, m) => total + (parseFloat(m.kembalian) || 0), 0)).toLocaleString('id-ID') %></div>
        <div class="stat-label-text">Total Kembalian</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

  </div>

  <!-- Filter Section -->
  <div class="filter-section">
    <div class="filter-header">
      <div class="filter-title-wrapper">
        <div class="filter-icon">
          <i class="fas fa-filter"></i>
        </div>
        <div>
          <h3 class="filter-title">Filter & Pencarian Data</h3>
          <p class="filter-subtitle">Cari dan filter data muzakki berdasarkan nama atau tanggal</p>
        </div>
      </div>
    </div>
    <div class="filter-body">
      <!-- Search Section -->
      <div class="filter-section-group">
        <div class="filter-section-title">
          <i class="fas fa-search"></i>
          <span>Pencarian</span>
        </div>
        <div class="filter-item">
          <label for="filter_search" class="filter-label">
            <i class="fas fa-user-search"></i> Nama Muzakki
          </label>
          <div class="filter-input-wrapper">
            <i class="fas fa-search input-icon"></i>
            <input type="text" id="filter_search" class="filter-input with-icon" placeholder="Ketik nama muzakki...">
          </div>
        </div>
      </div>

      <!-- Date Filter Section -->
      <div class="filter-section-group">
        <div class="filter-section-title">
          <i class="fas fa-calendar-alt"></i>
          <span>Filter Tanggal</span>
        </div>
        <div class="filter-date-row">
          <div class="filter-item">
            <label for="filter_start_date" class="filter-label">
              <i class="fas fa-calendar-day"></i> Dari Tanggal
            </label>
            <input type="date" id="filter_start_date" class="filter-input">
          </div>
          <div class="filter-date-separator">
            <i class="fas fa-arrow-right"></i>
          </div>
          <div class="filter-item">
            <label for="filter_end_date" class="filter-label">
              <i class="fas fa-calendar-check"></i> Sampai Tanggal
            </label>
            <input type="date" id="filter_end_date" class="filter-input">
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="filter-actions-wrapper">
        <button type="button" id="btn_apply_filter" class="btn-filter btn-filter-primary">
          <i class="fas fa-check-circle"></i>
          <span>Terapkan Filter</span>
        </button>
        <button type="button" id="btn_reset_filter" class="btn-filter btn-filter-secondary">
          <i class="fas fa-redo-alt"></i>
          <span>Reset Filter</span>
        </button>
      </div>

      <!-- Filter Info -->
      <div class="filter-info" id="filter_info" style="display: none;">
        <i class="fas fa-info-circle"></i>
        <span id="filter_info_text">Menampilkan semua data</span>
      </div>
    </div>
  </div>

  <!-- Data Table Section -->
  <div class="table-section">
    <div class="table-header-wrapper">
      <div class="table-header-left">
        <div class="table-header-icon">
          <i class="fas fa-table"></i>
        </div>
        <div class="table-header-text">
          <h2 class="table-title">Daftar Muzakki RT <%= rt.nomor_rt %></h2>
          <p class="table-subtitle">Data lengkap muzakki dan zakat fitrah</p>
        </div>
      </div>
      <div class="table-header-right">
        <button type="button" class="btn-tambah-infak" onclick="openInfakModal()" title="Tambah Infak dari Kembalian">
          <i class="fas fa-hand-holding-heart"></i>
          <span>Tambah Infak</span>
        </button>
        <span class="table-badge">
          <i class="fas fa-users"></i>
          <%= muzakki.length %> Data
        </span>
      </div>
    </div>

    <div class="table-content-wrapper">
      <% if (muzakki.length === 0) { %>
        <div class="empty-state-box">
          <div class="empty-state-icon">
            <i class="fas fa-users"></i>
          </div>
          <h3 class="empty-state-title">Belum ada data muzakki di RT <%= rt.nomor_rt %></h3>
          <p class="empty-state-desc">Mulai dengan menambahkan data muzakki untuk RT ini</p>
          <a href="/muzakki/create" class="btn-empty-state">
            <i class="fas fa-plus mr-2"></i>
            Tambah Muzakki
          </a>
        </div>
      <% } else { %>
        <!-- Desktop View -->
        <div class="desktop-view">
          <div class="table-responsive-wrapper">
            <table class="data-table">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Nama Muzakki</th>
                  <th>Jiwa</th>
                  <th>Jenis Zakat</th>
                  <th>Kewajiban</th>
                  <th>Jumlah Bayar</th>
                  <th>Kembalian</th>
                  <th>Pencatat</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% muzakki.forEach(function(item, index) { %>
                  <tr class="table-row-animated" style="animation-delay: <%= index * 0.05 %>s;">
                    <td class="text-center">
                      <span class="number-badge"><%= index + 1 %></span>
                    </td>
                    <td>
                      <div class="cell-content-primary">
                        <div class="muzakki-names-container" data-names="<%= item.nama_muzakki_list || '-' %>" data-id="<%= item.id %>">
                          <!-- Will be populated by JavaScript -->
                        </div>
                        <div class="cell-subtitle"><%= item.jumlah_muzakki || 0 %> orang</div>
                        <% if (item.catatan) { %>
                          <div class="cell-note"><%= item.catatan %></div>
                        <% } %>
                      </div>
                    </td>
                    <td class="text-center">
                      <span class="badge-stat badge-stat-gray">
                        <i class="fas fa-user-friends"></i>
                        <%= item.jumlah_jiwa %> jiwa
                      </span>
                    </td>
                    <td class="text-center">
                      <% if (item.jenis_zakat === 'beras') { %>
                        <span class="badge-zakat badge-zakat-beras">
                          <i class="fas fa-seedling"></i>
                          Beras
                        </span>
                      <% } else { %>
                        <span class="badge-zakat badge-zakat-uang">
                          <i class="fas fa-coins"></i>
                          Uang
                        </span>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <% if (item.jenis_zakat === 'beras') { %>
                        <div class="amount-display amount-success">
                          <i class="fas fa-weight"></i>
                          <%= item.jumlah_beras_kg %> kg
                        </div>
                      <% } else { %>
                        <div class="amount-display amount-info">
                          Rp <%= Math.floor(item.jumlah_uang).toLocaleString('id-ID') %>
                        </div>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <div class="amount-display amount-success">
                        <i class="fas fa-check-circle"></i>
                        Rp <%= Math.floor(item.jumlah_bayar).toLocaleString('id-ID') %>
                      </div>
                    </td>
                    <td class="text-center">
                      <% if (item.kembalian > 0) { %>
                        <div class="kembalian-wrapper">
                          <div class="amount-display amount-warning">
                            Rp <%= Math.floor(item.kembalian).toLocaleString('id-ID') %>
                          </div>
                          <form method="POST" action="/muzakki/<%= item.id %>/sedekahkan-kembalian" class="inline sedekah-form">
                            <button type="submit" class="btn-sedekah" title="Sedekahkan Kembalian">
                              <i class="fas fa-hand-holding-heart"></i>
                              <span>Sedekahkan</span>
                            </button>
                          </form>
                        </div>
                      <% } else { %>
                        <div class="text-gray-400">-</div>
                      <% } %>
                    </td>
                    <td>
                      <div class="pencatat-info">
                        <div class="pencatat-name"><%= item.pencatat_name || '-' %></div>
                        <div class="pencatat-date"><%= new Date(item.created_at).toLocaleDateString('id-ID') %></div>
                      </div>
                    </td>
                    <td>
                      <div class="action-buttons-group">
                        <a href="/muzakki/<%= item.id %>" class="btn-icon btn-icon-info" title="Detail">
                          <i class="fas fa-eye"></i>
                        </a>
                        <a href="/muzakki/<%= item.id %>/edit" class="btn-icon btn-icon-primary" title="Edit">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form method="POST" action="/muzakki/delete/<%= item.id %>?_method=DELETE" class="inline-form delete-form" data-name="<%= item.nama_muzakki_list %>">
                          <button type="button" class="btn-icon btn-icon-danger" title="Hapus" onclick="confirmDelete(this)">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Mobile View -->
        <div class="mobile-view">
          <% muzakki.forEach(function(item, index) { %>
            <div class="mobile-card">
              <div class="mobile-card-header">
                <div class="mobile-card-title">
                  <span class="mobile-card-number"><%= index + 1 %></span>
                  <div class="mobile-card-name-wrapper">
                    <div class="muzakki-names-container-mobile" data-names="<%= item.nama_muzakki_list || '-' %>" data-id="mobile-<%= item.id %>">
                      <!-- Will be populated by JavaScript -->
                    </div>
                    <span class="mobile-card-subtitle"><%= item.jumlah_muzakki || 0 %> orang â€¢ <%= item.jumlah_jiwa %> jiwa</span>
                  </div>
                </div>
                <% if (item.jenis_zakat === 'beras') { %>
                  <span class="badge-zakat badge-zakat-beras">
                    <i class="fas fa-seedling"></i> Beras
                  </span>
                <% } else { %>
                  <span class="badge-zakat badge-zakat-uang">
                    <i class="fas fa-coins"></i> Uang
                  </span>
                <% } %>
              </div>
              
              <div class="mobile-card-body">
                <div class="mobile-card-row">
                  <div class="mobile-card-item">
                    <span class="mobile-card-label">Kewajiban</span>
                    <span class="mobile-card-value">
                      <% if (item.jenis_zakat === 'beras') { %>
                        <%= item.jumlah_beras_kg %> kg
                      <% } else { %>
                        Rp <%= Math.floor(item.jumlah_uang).toLocaleString('id-ID') %>
                      <% } %>
                    </span>
                  </div>
                  <div class="mobile-card-item">
                    <span class="mobile-card-label">Jumlah Bayar</span>
                    <span class="mobile-card-value text-success">Rp <%= Math.floor(item.jumlah_bayar).toLocaleString('id-ID') %></span>
                  </div>
                </div>
                <div class="mobile-card-row">
                  <div class="mobile-card-item">
                    <span class="mobile-card-label">Kembalian</span>
                    <% if (item.kembalian > 0) { %>
                      <span class="mobile-card-value text-warning">Rp <%= Math.floor(item.kembalian).toLocaleString('id-ID') %></span>
                    <% } else { %>
                      <span class="mobile-card-value text-muted">-</span>
                    <% } %>
                  </div>
                  <div class="mobile-card-item">
                    <span class="mobile-card-label">Pencatat</span>
                    <span class="mobile-card-value"><%= item.pencatat_name || '-' %></span>
                  </div>
                </div>
                <% if (item.catatan) { %>
                  <div class="mobile-card-note">
                    <i class="fas fa-sticky-note"></i> <%= item.catatan %>
                  </div>
                <% } %>
              </div>

              <div class="mobile-card-footer">
                <% if (item.kembalian > 0) { %>
                  <form method="POST" action="/muzakki/<%= item.id %>/sedekahkan-kembalian" class="sedekah-form">
                    <button type="submit" class="btn-sedekah-mobile">
                      <i class="fas fa-hand-holding-heart"></i> Sedekahkan
                    </button>
                  </form>
                <% } %>
                <div class="mobile-card-actions">
                  <a href="/muzakki/<%= item.id %>" class="btn-icon btn-icon-info" title="Detail">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/muzakki/<%= item.id %>/edit" class="btn-icon btn-icon-primary" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <form method="POST" action="/muzakki/delete/<%= item.id %>?_method=DELETE" class="inline-form delete-form" data-name="<%= item.nama_muzakki_list %>">
                    <button type="button" class="btn-icon btn-icon-danger" title="Hapus" onclick="confirmDelete(this)">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Modern Styles -->
<style>
  /* Page Wrapper */
  .page-wrapper {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, #1EAF2F 0%, #16a127 50%, #0f8a1f 100%);
    border-radius: 20px;
    padding: 32px;
    box-shadow: 0 10px 30px rgba(30, 175, 47, 0.25);
    position: relative;
    overflow: hidden;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
