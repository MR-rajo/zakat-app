  .stat-box-primary .stat-decoration { background: #1EAF2F; }
  .stat-box-success .stat-decoration { background: #10b981; }
  .stat-box-info .stat-decoration { background: #3b82f6; }
  .stat-box-warning .stat-decoration { background: #f59e0b; }

  .stat-icon-wrapper {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    color: white;
    flex-shrink: 0;
  }

  .stat-icon-primary { background: linear-gradient(135deg, #1EAF2F 0%, #16a127 100%); }
  .stat-icon-success { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
  .stat-icon-info { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
