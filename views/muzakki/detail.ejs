  .info-value-highlight { color: #2563eb; }
  .info-value-success { color: #059669; }
  .info-value-warning { color: #d97706; }

  .badge-zakat {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    border-radius: 8px;
    font-size: 12px;
    font-weight: 600;
  }

  .badge-zakat-beras { background: #d1fae5; color: #065f46; }
  .badge-zakat-uang { background: #dbeafe; color: #1e40af; }

