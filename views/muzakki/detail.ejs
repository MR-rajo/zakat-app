    display: flex;
    align-items: center;
    justify-content: center;
    color: #6b7280;
    font-size: 13px;
    flex-shrink: 0;
  }

  .info-icon.icon-blue { background: #dbeafe; color: #2563eb; }
  .info-icon.icon-green { background: #d1fae5; color: #059669; }
  .info-icon.icon-yellow { background: #fef3c7; color: #d97706; }

  .info-content { flex: 1; }
