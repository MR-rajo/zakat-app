<%- include('../layouts/header', { title: 'Detail Muzakki - Zakat Fitrah App',
bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'muzakki' }) %>

<div class="page-wrapper">
  <!-- Modern Header -->
  <div class="page-header">
    <div class="header-content-wrapper">
      <div class="header-left-section">
        <a href="/muzakki" class="btn-back" title="Kembali">
          <i class="fas fa-arrow-left"></i>
        </a>
        <div class="header-icon-box">
          <i class="fas fa-user"></i>
        </div>
        <div class="header-text-box">
          <h1 class="header-title-text">Detail Muzakki</h1>
          <p class="header-subtitle-text">Informasi lengkap data zakat fitrah</p>
        </div>
      </div>
      <div class="header-actions">
        <a href="/muzakki/<%= muzakki.id %>/edit" class="btn-action btn-action-primary">
          <i class="fas fa-edit mr-2"></i>
          <span>Edit Data</span>
        </a>
        <a href="/muzakki" class="btn-action btn-action-secondary">
          <i class="fas fa-list mr-2"></i>
          <span>Kembali</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="stats-container">
    <div class="stat-box stat-box-primary">
      <div class="stat-icon-wrapper stat-icon-primary">
        <i class="fas fa-users"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text"><%= muzakki.jumlah_jiwa %></div>
        <div class="stat-label-text">Jumlah Jiwa</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-info">
      <div class="stat-icon-wrapper stat-icon-info">
        <% if (muzakki.jenis_zakat === 'beras') { %>
          <i class="fas fa-seedling"></i>
        <% } else { %>
          <i class="fas fa-coins"></i>
        <% } %>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">
          <% if (muzakki.jenis_zakat === 'beras') { %>
            <%= muzakki.jumlah_beras_kg %> kg
          <% } else { %>
            Rp <%= Math.floor(muzakki.jumlah_uang).toLocaleString('id-ID') %>
          <% } %>
        </div>
        <div class="stat-label-text">Kewajiban Zakat</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-success">
      <div class="stat-icon-wrapper stat-icon-success">
        <i class="fas fa-check-circle"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">Rp <%= Math.floor(muzakki.jumlah_bayar).toLocaleString('id-ID') %></div>
        <div class="stat-label-text">Jumlah Bayar</div>
      </div>
      <div class="stat-decoration"></div>
    </div>

    <div class="stat-box stat-box-warning">
      <div class="stat-icon-wrapper stat-icon-warning">
        <i class="fas fa-hand-holding-usd"></i>
      </div>
      <div class="stat-content-box">
        <div class="stat-value-text">
          <% if (muzakki.kembalian > 0) { %>
            Rp <%= Math.floor(muzakki.kembalian).toLocaleString('id-ID') %>
          <% } else { %>
            -
          <% } %>
        </div>
        <div class="stat-label-text">Kembalian</div>
      </div>
      <div class="stat-decoration"></div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="content-grid">
    <!-- Left Column - Informasi Muzakki -->
    <div class="info-section">
      <div class="section-header-box">
        <div class="section-icon">
          <i class="fas fa-user-friends"></i>
        </div>
        <div class="section-header-text">
          <h2 class="section-title">Daftar Nama Muzakki</h2>
          <p class="section-subtitle"><%= muzakkiDetails.length %> orang terdaftar</p>
        </div>
      </div>
      
      <div class="section-content">
        <% if (muzakkiDetails.length > 0) { %>
          <div class="muzakki-list">
            <% muzakkiDetails.forEach(function(detail, index) { %>
              <div class="muzakki-item">
                <div class="muzakki-number"><%= index + 1 %></div>
                <div class="muzakki-info">
                  <div class="muzakki-name"><%= detail.nama_muzakki %></div>
                  <div class="muzakki-meta">
                    <% if (detail.bin_binti) { %>
                      <span class="badge-gender <%= detail.bin_binti === 'bin' ? 'badge-male' : 'badge-female' %>">
                        <i class="fas <%= detail.bin_binti === 'bin' ? 'fa-mars' : 'fa-venus' %>"></i>
                        <%= detail.bin_binti === 'bin' ? 'Bin' : 'Binti' %>
                      </span>
                    <% } %>
                    <% if (detail.nama_orang_tua) { %>
                      <span class="parent-name">
                        <i class="fas fa-user-friends"></i>
                        <%= detail.nama_orang_tua %>
                      </span>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="empty-mini">
            <i class="fas fa-users"></i>
            <span>Tidak ada detail muzakki</span>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Right Column - Informasi Detail -->
    <div class="info-section">
      <div class="section-header-box">
        <div class="section-icon section-icon-green">
          <i class="fas fa-info-circle"></i>
        </div>
        <div class="section-header-text">
          <h2 class="section-title">Informasi Detail</h2>
          <p class="section-subtitle">Data lengkap zakat</p>
        </div>
      </div>
      
      <div class="section-content">
        <div class="info-grid">
          <div class="info-item">
            <div class="info-icon">
              <i class="fas fa-home"></i>
            </div>
            <div class="info-content">
              <div class="info-label">RT</div>
              <div class="info-value"><%= muzakki.nomor_rt || '-' %> - <%= muzakki.ketua_rt || '-' %></div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="info-content">
              <div class="info-label">Jumlah Jiwa</div>
              <div class="info-value"><%= muzakki.jumlah_jiwa %> jiwa</div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <% if (muzakki.jenis_zakat === 'beras') { %>
                <i class="fas fa-seedling"></i>
              <% } else { %>
                <i class="fas fa-coins"></i>
              <% } %>
            </div>
            <div class="info-content">
              <div class="info-label">Jenis Zakat</div>
              <div class="info-value">
                <% if (muzakki.jenis_zakat === 'beras') { %>
                  <span class="badge-zakat badge-zakat-beras">
                    <i class="fas fa-seedling"></i> Beras
                  </span>
                <% } else { %>
                  <span class="badge-zakat badge-zakat-uang">
                    <i class="fas fa-coins"></i> Uang
                  </span>
                <% } %>
              </div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon icon-blue">
              <i class="fas fa-calculator"></i>
            </div>
            <div class="info-content">
              <div class="info-label">Kewajiban Zakat</div>
              <div class="info-value info-value-highlight">
                <% if (muzakki.jenis_zakat === 'beras') { %>
                  <%= muzakki.jumlah_beras_kg %> kg beras
                <% } else { %>
                  Rp <%= Math.floor(muzakki.jumlah_uang).toLocaleString('id-ID') %>
                <% } %>
              </div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon icon-green">
              <i class="fas fa-check-circle"></i>
            </div>
            <div class="info-content">
              <div class="info-label">Jumlah Bayar</div>
              <div class="info-value info-value-success">Rp <%= Math.floor(muzakki.jumlah_bayar).toLocaleString('id-ID') %></div>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon icon-yellow">
              <i class="fas fa-hand-holding-usd"></i>
            </div>
            <div class="info-content">
              <div class="info-label">Kembalian</div>
              <div class="info-value <%= muzakki.kembalian > 0 ? 'info-value-warning' : '' %>">
                <% if (muzakki.kembalian > 0) { %>
                  Rp <%= Math.floor(muzakki.kembalian).toLocaleString('id-ID') %>
                <% } else { %>
                  -
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <% if (muzakki.kembalian > 0) { %>
          <div class="sedekah-section">
            <form method="POST" action="/muzakki/<%= muzakki.id %>/sedekahkan-kembalian" class="sedekah-form" id="sedekahForm">
              <button type="submit" class="btn-sedekah-full">
                <i class="fas fa-hand-holding-heart mr-2"></i>
                Sedekahkan Kembalian sebagai Infak
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Catatan Section -->
  <% if (muzakki.catatan) { %>
    <div class="info-section info-section-full">
      <div class="section-header-box">
        <div class="section-icon section-icon-purple">
          <i class="fas fa-sticky-note"></i>
        </div>
        <div class="section-header-text">
          <h2 class="section-title">Catatan</h2>
          <p class="section-subtitle">Keterangan tambahan</p>
        </div>
      </div>
      <div class="section-content">
        <div class="catatan-box">
          <p><%= muzakki.catatan %></p>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Sistem Info Section -->
  <div class="info-section info-section-full">
    <div class="section-header-box">
      <div class="section-icon section-icon-gray">
        <i class="fas fa-cog"></i>
      </div>
      <div class="section-header-text">
        <h2 class="section-title">Informasi Sistem</h2>
        <p class="section-subtitle">Data pencatatan</p>
      </div>
    </div>
    <div class="section-content">
      <div class="sistem-grid">
        <div class="sistem-item">
          <div class="sistem-icon">
            <i class="fas fa-user-edit"></i>
          </div>
          <div class="sistem-content">
            <div class="sistem-label">Dicatat oleh</div>
            <div class="sistem-value"><%= muzakki.pencatat_name || '-' %></div>
          </div>
        </div>
        <div class="sistem-item">
          <div class="sistem-icon">
            <i class="fas fa-calendar-alt"></i>
          </div>
          <div class="sistem-content">
            <div class="sistem-label">Tanggal Dibuat</div>
            <div class="sistem-value"><%= new Date(muzakki.created_at).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modern Styles -->
