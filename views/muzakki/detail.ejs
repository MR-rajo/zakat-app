<script>
  // Handle sedekah form submission with SweetAlert2
  <% if (muzakki.kembalian > 0) { %>
  document.getElementById('sedekahForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const formElement = this;

    Swal.fire({
      title: 'Sedekahkan Kembalian?',
      text: 'Kembalian Rp <%= Math.floor(muzakki.kembalian).toLocaleString("id-ID") %> akan disedekahkan sebagai infak. Lanjutkan?',
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#10b981',
      cancelButtonColor: '#6b7280',
      confirmButtonText: '<i class="fas fa-hand-holding-heart mr-2"></i>Ya, Sedekahkan',
      cancelButtonText: '<i class="fas fa-times mr-2"></i>Batal',
      reverseButtons: true
    }).then((result) => {
      if (result.isConfirmed) {
        formElement.submit();
      }
    });
  });
  <% } %>

  // Add entrance animations on load
  document.addEventListener('DOMContentLoaded', function() {
    const statBoxes = document.querySelectorAll('.stat-box');
    statBoxes.forEach((box, index) => {
      box.style.opacity = '0';
      box.style.transform = 'translateY(20px)';
      setTimeout(() => {
        box.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
        box.style.opacity = '1';
        box.style.transform = 'translateY(0)';
      }, index * 100);
    });

    const infoSections = document.querySelectorAll('.info-section');
    infoSections.forEach((section, index) => {
      section.style.opacity = '0';
      section.style.transform = 'translateY(20px)';
      setTimeout(() => {
        section.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
        section.style.opacity = '1';
        section.style.transform = 'translateY(0)';
      }, 400 + (index * 150));
    });

    const muzakkiItems = document.querySelectorAll('.muzakki-item');
    muzakkiItems.forEach((item, index) => {
      item.style.opacity = '0';
      item.style.transform = 'translateX(-20px)';
      setTimeout(() => {
        item.style.transition = 'all 0.4s cubic-bezier(0.4, 0, 0.2, 1)';
        item.style.opacity = '1';
        item.style.transform = 'translateX(0)';
      }, 600 + (index * 80));
    });
  });
</script>

