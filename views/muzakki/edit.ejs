<div class="page-wrapper">
    <!-- Modern Header -->
    <div class="page-header">
        <div class="header-content-wrapper">
            <div class="header-left-section">
                <a href="/muzakki" class="back-button">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div class="header-icon-box">
                    <i class="fas fa-user-edit"></i>
                </div>
                <div class="header-text-box">
                    <h1 class="header-title-text">Edit Data Muzakki</h1>
                    <p class="header-subtitle-text">
                        <% if (muzakkiDetails && muzakkiDetails.length > 0) { %>
                            <%= muzakkiDetails.map(d => d.nama_muzakki).join(', ') %>
                        <% } else { %>
                            ID #<%= muzakki.id %>
                        <% } %>
                    </p>
                </div>
            </div>
            <div class="header-actions">
                <div class="info-badge">
                    <i class="fas fa-info-circle"></i>
                    <span>Mode Edit</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Container -->
    <div class="form-container">
        <form action="/muzakki/<%= muzakki.id %>?_method=PUT" method="POST" id="muzakkiForm">
            <!-- RT Selection Card -->
            <div class="form-card">
                <div class="card-header">
                    <div class="card-header-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="card-header-text">
                        <h3 class="card-title">Lokasi RT</h3>
                        <p class="card-subtitle">Pilih RT tempat muzakki terdaftar</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="rt_id" class="form-label">
                            <i class="fas fa-home"></i> RT <span class="required">*</span>
                        </label>
                        <select id="rt_id" name="rt_id" required class="form-select">
                            <option value="">Pilih RT</option>
                            <% rtList.forEach(function(rt) { %>
                            <option value="<%= rt.id %>" <%= rt.id === muzakki.rt_id ? 'selected' : '' %>>
                                RT <%= rt.nomor_rt %> - <%= rt.ketua_rt %>
                            </option>
                            <% }); %>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Data Identitas Muzakki Card -->
            <div class="form-card">
                <div class="card-header">
                    <div class="card-header-icon">
                        <i class="fas fa-id-card"></i>
                    </div>
                    <div class="card-header-text">
                        <h3 class="card-title">Data Identitas Muzakki</h3>
                        <p class="card-subtitle">Informasi lengkap muzakki yang ditanggung</p>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Container untuk semua section muzakki -->
                    <div id="muzakkiContainer">
                        <% if (muzakkiDetails.length > 0) { %>
                            <% muzakkiDetails.forEach(function(detail, index) { %>
                            <div class="muzakki-section" data-index="<%= index %>">
                                <div class="muzakki-section-header">
                                    <h4 class="muzakki-section-title">
                                        <i class="fas fa-user-circle"></i> Muzakki #<%= index + 1 %>
                                    </h4>
                                    <% if (index > 0) { %>
                                    <button type="button" class="btn-remove-muzakki" onclick="removeMuzakkiSection(<%= index %>)">
                                        <i class="fas fa-trash"></i>
                                        <span>Hapus</span>
                                    </button>
                                    <% } %>
                                </div>
                                
                                <div class="form-grid">
                                    <!-- Nama Muzakki -->
                                    <div class="form-group form-group-full">
                                        <label for="nama_<%= index %>" class="form-label">
                                            <i class="fas fa-user"></i> Nama Lengkap Muzakki <span class="required">*</span>
                                        </label>
                                        <input type="text" id="nama_<%= index %>" name="muzakki[<%= index %>][nama]" 
                                               required class="form-input" 
                                               value="<%= detail.nama_muzakki %>"
                                               placeholder="Masukkan nama lengkap muzakki">
                                    </div>

                                    <!-- Bin/Binti -->
                                    <div class="form-group">
                                        <label for="bin_binti_<%= index %>" class="form-label">
                                            <i class="fas fa-venus-mars"></i> Bin/Binti
                                        </label>
                                        <select id="bin_binti_<%= index %>" name="muzakki[<%= index %>][bin_binti]" class="form-select">
                                            <option value="">Pilih</option>
                                            <option value="bin" <%= detail.bin_binti === 'bin' ? 'selected' : '' %>>Bin (Anak Laki-laki)</option>
                                            <option value="binti" <%= detail.bin_binti === 'binti' ? 'selected' : '' %>>Binti (Anak Perempuan)</option>
                                        </select>
                                        <p class="form-hint">Bin untuk laki-laki, Binti untuk perempuan</p>
                                    </div>

                                    <!-- Nama Orang Tua -->
                                    <div class="form-group">
                                        <label for="nama_orang_tua_<%= index %>" class="form-label">
                                            <i class="fas fa-users"></i> Nama Orang Tua
                                        </label>
                                        <input type="text" id="nama_orang_tua_<%= index %>" name="muzakki[<%= index %>][nama_orang_tua]" 
                                               class="form-input" 
                                               value="<%= detail.nama_orang_tua || '' %>"
                                               placeholder="Masukkan nama ayah atau ibu">
                                        <p class="form-hint">Nama ayah jika "bin", nama ibu jika "binti"</p>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        <% } else { %>
                            <!-- Default single muzakki if no details -->
                            <div class="muzakki-section" data-index="0">
                                <div class="muzakki-section-header">
                                    <h4 class="muzakki-section-title">
                                        <i class="fas fa-user-circle"></i> Muzakki #1
                                    </h4>
                                </div>
                                
                                <div class="form-grid">
                                    <div class="form-group form-group-full">
                                        <label for="nama_0" class="form-label">
                                            <i class="fas fa-user"></i> Nama Lengkap Muzakki <span class="required">*</span>
                                        </label>
                                        <input type="text" id="nama_0" name="muzakki[0][nama]" required class="form-input" 
                                               placeholder="Masukkan nama lengkap muzakki">
                                    </div>

                                    <div class="form-group">
                                        <label for="bin_binti_0" class="form-label">
                                            <i class="fas fa-venus-mars"></i> Bin/Binti
                                        </label>
                                        <select id="bin_binti_0" name="muzakki[0][bin_binti]" class="form-select">
                                            <option value="">Pilih</option>
                                            <option value="bin">Bin (Anak Laki-laki)</option>
                                            <option value="binti">Binti (Anak Perempuan)</option>
                                        </select>
                                        <p class="form-hint">Bin untuk laki-laki, Binti untuk perempuan</p>
                                    </div>

                                    <div class="form-group">
                                        <label for="nama_orang_tua_0" class="form-label">
                                            <i class="fas fa-users"></i> Nama Orang Tua
                                        </label>
                                        <input type="text" id="nama_orang_tua_0" name="muzakki[0][nama_orang_tua]" 
                                               class="form-input" placeholder="Masukkan nama ayah atau ibu">
                                        <p class="form-hint">Nama ayah jika "bin", nama ibu jika "binti"</p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <button type="button" id="addMuzakkiBtn" class="btn-add-muzakki" onclick="addMuzakkiSection()">
                        <i class="fas fa-plus"></i>
                        <span>Tambah Muzakki</span>
                    </button>
                </div>
            </div>

            <!-- Perhitungan Zakat Card -->
            <div class="form-card">
                <div class="card-header">
                    <div class="card-header-icon">
                        <i class="fas fa-calculator"></i>
                    </div>
                    <div class="card-header-text">
                        <h3 class="card-title">Perhitungan Zakat</h3>
                        <p class="card-subtitle">Perhitungan otomatis berdasarkan jumlah jiwa dan jenis zakat</p>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-grid">
                        <!-- Jumlah Jiwa -->
                        <div class="form-group">
                            <label for="jumlah_jiwa" class="form-label">
                                <i class="fas fa-users"></i> Jumlah Jiwa <span class="required">*</span>
                            </label>
                            <input type="number" id="jumlah_jiwa" name="jumlah_jiwa" required min="1" 
                                   class="form-input" 
                                   value="<%= muzakki.jumlah_jiwa %>"
                                   placeholder="Jumlah jiwa yang ditanggung"
                                   onchange="calculateZakat()">
                            <p class="form-hint">Jumlah jiwa yang ditanggung zakatnya</p>
                        </div>

                        <!-- Jenis Zakat -->
                        <div class="form-group">
                            <label for="master_zakat_id" class="form-label">
                                <i class="fas fa-hand-holding"></i> Jenis Zakat <span class="required">*</span>
                            </label>
                            <select id="master_zakat_id" name="master_zakat_id" required class="form-select" onchange="calculateZakat()">
                                <option value="">Pilih jenis zakat</option>
                                <% masterZakatList.forEach(function(zakat) { %>
                                <option value="<%= zakat.id %>" 
                                        data-harga="<%= zakat.harga %>" 
                                        data-kg="<%= zakat.kg %>"
                                        <%= zakat.id === muzakki.master_zakat_id ? 'selected' : '' %>>
                                    <%= zakat.nama %> 
                                    <% if (parseFloat(zakat.kg) > 0) { %>
                                        (<%= zakat.kg %> kg/jiwa)
                                    <% } else { %>
                                        (Rp <%= Math.floor(parseFloat(zakat.harga)).toLocaleString('id-ID') %>/jiwa)
                                    <% } %>
                                </option>
                                <% }); %>
                            </select>
                        </div>

                        <!-- Kewajiban Display -->
                        <div class="form-group form-group-full">
                            <div class="kewajiban-box">
                                <div class="kewajiban-icon">
                                    <i class="fas fa-receipt"></i>
                                </div>
                                <div class="kewajiban-content">
                                    <div class="kewajiban-label">Kewajiban Zakat</div>
                                    <div class="kewajiban-value" id="kewajiban_display">
                                        <% if (muzakki.jenis_zakat === 'beras') { %>
                                            <%= parseFloat(muzakki.jumlah_beras_kg || 0).toFixed(1) %> kg beras
                                        <% } else { %>
                                            Rp <%= muzakki.jumlah_uang ? parseInt(muzakki.jumlah_uang).toLocaleString('id-ID') : '0' %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Jumlah Bayar -->
                        <div class="form-group form-group-full">
                            <label for="jumlah_bayar" class="form-label">
                                <i class="fas fa-money-bill-wave"></i> Jumlah Bayar <span class="required">*</span>
                            </label>
                            <div class="input-with-prefix">
                                <span class="input-prefix">Rp</span>
                                <input type="text" id="jumlah_bayar_display" 
                                       class="form-input input-with-prefix-field" 
                                       value="<%= muzakki.jumlah_bayar ? parseInt(muzakki.jumlah_bayar).toLocaleString('id-ID') : '' %>"
                                       placeholder="0"
                                       oninput="handleRupiahInput(this)"
                                       onfocus="prepareRupiahInput(this)"
                                       onblur="finalizeRupiahInput(this)">
                                <input type="hidden" id="jumlah_bayar" name="jumlah_bayar" 
                                       value="<%= muzakki.jumlah_bayar %>" required>
                            </div>
                            <p class="form-hint">
                                Jika lebih dari kewajiban, selisihnya akan menjadi kembalian yang bisa disedekahkan
                            </p>
                            <% if (muzakki.kembalian > 0) { %>
                            <div class="alert-info">
                                <i class="fas fa-info-circle"></i>
                                <span>Kembalian saat ini: <strong>Rp <%= muzakki.kembalian ? parseInt(muzakki.kembalian).toLocaleString('id-ID') : '0' %></strong></span>
                            </div>
                            <% } %>
                        </div>

                        <!-- Catatan -->
                        <div class="form-group form-group-full">
                            <label for="catatan" class="form-label">
                                <i class="fas fa-sticky-note"></i> Catatan (Opsional)
                            </label>
                            <textarea id="catatan" name="catatan" rows="3" 
                                      class="form-input" 
                                      placeholder="Catatan tambahan atau keterangan khusus"><%= muzakki.catatan || '' %></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="form-actions">
                <a href="/muzakki" class="btn-secondary">
                    <i class="fas fa-times"></i>
                    <span>Batal</span>
                </a>
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i>
                    <span>Update Data</span>
                </button>
            </div>
        </form>
    </div>

    <!-- Data History Card -->
    <div class="info-grid">
        <div class="info-card info-card-blue">
            <div class="info-card-icon">
                <i class="fas fa-history"></i>
            </div>
            <div class="info-card-content">
                <h3 class="info-card-title">Informasi Data</h3>
                <ul class="info-card-list">
                    <li><strong>Dibuat:</strong> <%= new Date(muzakki.created_at).toLocaleString('id-ID') %></li>
                    <li><strong>Diupdate:</strong> <%= new Date(muzakki.updated_at).toLocaleString('id-ID') %></li>
                    <li><strong>Pencatat:</strong> User ID <%= muzakki.user_id %></li>
                </ul>
            </div>
        </div>
    </div>
</div>

