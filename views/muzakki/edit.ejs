<script>
    // Global variable untuk tracking jumlah muzakki
    let muzakkiCount = <%= muzakkiDetails.length || 1 %>;

    // Function untuk menambah section muzakki baru
    function addMuzakkiSection() {
        const container = document.getElementById("muzakkiContainer");
        const currentSections = document.querySelectorAll(".muzakki-section");
        const newIndex = currentSections.length;

        // Cek maksimal 5 muzakki
        if (newIndex >= 5) {
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: 'warning',
                    title: 'Batas Tercapai',
                    text: 'Maksimal 5 muzakki per keluarga',
                    confirmButtonColor: '#1EAF2F'
                });
            } else {
                alert('Maksimal 5 muzakki per keluarga');
            }
            return;
        }

        // HTML untuk section muzakki baru dengan modern design
        const newSection = `
            <div class="muzakki-section" data-index="${newIndex}">
                <div class="muzakki-section-header">
                    <h4 class="muzakki-section-title">
                        <i class="fas fa-user-circle"></i> Muzakki #${newIndex + 1}
                    </h4>
                    <button type="button" class="btn-remove-muzakki" onclick="removeMuzakkiSection(${newIndex})">
                        <i class="fas fa-trash"></i>
                        <span>Hapus</span>
                    </button>
                </div>
                
                <div class="form-grid">
                    <!-- Nama Muzakki -->
                    <div class="form-group form-group-full">
                        <label for="nama_${newIndex}" class="form-label">
                            <i class="fas fa-user"></i> Nama Lengkap Muzakki <span class="required">*</span>
                        </label>
                        <input type="text" id="nama_${newIndex}" name="muzakki[${newIndex}][nama]" 
                               required class="form-input" placeholder="Masukkan nama lengkap muzakki">
                    </div>

                    <!-- Bin/Binti -->
                    <div class="form-group">
                        <label for="bin_binti_${newIndex}" class="form-label">
                            <i class="fas fa-venus-mars"></i> Bin/Binti
                        </label>
                        <select id="bin_binti_${newIndex}" name="muzakki[${newIndex}][bin_binti]" class="form-select">
                            <option value="">Pilih</option>
                            <option value="bin">Bin (Anak Laki-laki)</option>
                            <option value="binti">Binti (Anak Perempuan)</option>
                        </select>
                        <p class="form-hint">Bin untuk laki-laki, Binti untuk perempuan</p>
                    </div>

                    <!-- Nama Orang Tua -->
                    <div class="form-group">
                        <label for="nama_orang_tua_${newIndex}" class="form-label">
                            <i class="fas fa-users"></i> Nama Orang Tua
                        </label>
                        <input type="text" id="nama_orang_tua_${newIndex}" name="muzakki[${newIndex}][nama_orang_tua]" 
                               class="form-input" placeholder="Masukkan nama ayah atau ibu">
                        <p class="form-hint">Nama ayah jika "bin", nama ibu jika "binti"</p>
                    </div>
                </div>
            </div>
        `;

        // Tambahkan section baru ke container
        container.insertAdjacentHTML("beforeend", newSection);

        // Update counter muzakki
        muzakkiCount = document.querySelectorAll(".muzakki-section").length;

        // Update visibility tombol tambah
        updateAddButtonVisibility();

        // Scroll ke section yang baru ditambahkan dengan smooth animation
        setTimeout(() => {
            const newSectionElement = container.lastElementChild;
            if (newSectionElement) {
                newSectionElement.scrollIntoView({ 
                    behavior: "smooth", 
                    block: "center",
                    inline: "nearest"
                });
                
                // Focus ke input nama baru
                const namaInput = newSectionElement.querySelector(`#nama_${newIndex}`);
                if (namaInput) {
                    setTimeout(() => namaInput.focus(), 500);
                }
            }
        }, 100);

        // Show success notification
        if (typeof Swal !== 'undefined') {
            Swal.fire({
                icon: 'success',
                title: 'Section Ditambahkan',
                text: `Muzakki #${newIndex + 1} berhasil ditambahkan`,
                timer: 1500,
                showConfirmButton: false
            });
        }
    }

    // Function untuk menghapus section muzakki
    function removeMuzakkiSection(index) {
        const sections = document.querySelectorAll(".muzakki-section");
        
        // Tidak bisa hapus jika hanya tinggal 1 section
        if (sections.length <= 1) {
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: 'warning',
                    title: 'Tidak Dapat Dihapus',
                    text: 'Minimal harus ada 1 muzakki',
                    confirmButtonColor: '#1EAF2F'
                });
            } else {
                alert('Minimal harus ada 1 muzakki');
            }
            return;
        }

        const confirmMessage = "Apakah Anda yakin ingin menghapus data muzakki ini?";
        
        if (typeof Swal !== 'undefined') {
            Swal.fire({
                icon: 'question',
                title: 'Konfirmasi Hapus',
                text: confirmMessage,
                showCancelButton: true,
                confirmButtonText: 'Ya, Hapus',
                cancelButtonText: 'Batal',
                confirmButtonColor: '#ef4444',
                cancelButtonColor: '#6b7280',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    performRemove(index);
                }
            });
        } else {
            if (confirm(confirmMessage)) {
                performRemove(index);
            }
        }
    }

    function performRemove(index) {
        const section = document.querySelector(`[data-index="${index}"]`);
        if (section) {
            // Animate removal
            section.style.transition = 'all 0.3s ease';
            section.style.opacity = '0';
            section.style.transform = 'translateX(-20px)';
            
            setTimeout(() => {
                section.remove();
                
                // Update counter dan re-index semua sections
                updateMuzakkiNumbers();
                updateMuzakkiCounter();
                updateAddButtonVisibility();
                
                if (typeof Swal !== 'undefined') {
                    Swal.fire({
                        icon: 'success',
                        title: 'Data Dihapus',
                        text: 'Muzakki berhasil dihapus',
                        timer: 1500,
                        showConfirmButton: false
                    });
                }
            }, 300);
        }
    }

    // Function untuk update nomor muzakki setelah penghapusan
    function updateMuzakkiNumbers() {
        const sections = document.querySelectorAll(".muzakki-section");
        sections.forEach((section, index) => {
            // Update data-index attribute
            section.setAttribute('data-index', index);
            
            // Update title
            const title = section.querySelector(".muzakki-section-title");
            if (title) {
                title.innerHTML = `<i class="fas fa-user-circle"></i> Muzakki #${index + 1}`;
            }
            
            // Update remove button onclick
            const removeBtn = section.querySelector('button[onclick*="removeMuzakkiSection"]');
            if (removeBtn && index > 0) {
                removeBtn.setAttribute('onclick', `removeMuzakkiSection(${index})`);
            }
            
            // Update input names dan IDs
            const inputs = section.querySelectorAll('input, select');
            inputs.forEach(input => {
                const name = input.getAttribute('name');
                const id = input.getAttribute('id');
                
                if (name && name.includes('[')) {
                    const newName = name.replace(/\[\d+\]/, `[${index}]`);
                    input.setAttribute('name', newName);
                }
                
                if (id && id.includes('_')) {
                    const parts = id.split('_');
                    if (parts.length > 1) {
                        parts[parts.length - 1] = index.toString();
                        input.setAttribute('id', parts.join('_'));
                    }
                }
            });
            
            // Update labels
            const labels = section.querySelectorAll('label[for]');
            labels.forEach(label => {
                const forAttr = label.getAttribute('for');
                if (forAttr && forAttr.includes('_')) {
                    const parts = forAttr.split('_');
                    if (parts.length > 1) {
                        parts[parts.length - 1] = index.toString();
                        label.setAttribute('for', parts.join('_'));
                    }
                }
            });
        });
    }

    // Function untuk update counter muzakki
    function updateMuzakkiCounter() {
        muzakkiCount = document.querySelectorAll(".muzakki-section").length;
    }

    // Function untuk mengatur visibility tombol tambah
    function updateAddButtonVisibility() {
        const addBtn = document.getElementById("addMuzakkiBtn");
        const sections = document.querySelectorAll(".muzakki-section");

        if (sections.length >= 5) {
            addBtn.style.display = "none";
        } else {
            addBtn.style.display = "inline-flex";
        }
    }

    // Rupiah formatting functions
    function formatToRupiah(number) {
        if (!number || number === 0) return "0";
        return new Intl.NumberFormat("id-ID").format(number);
    }

    function parseFromRupiah(rupiahString) {
        if (!rupiahString) return 0;
        const cleanNumber = rupiahString.replace(/[^\d]/g, "");
        return parseInt(cleanNumber) || 0;
    }

    // Handle rupiah input in real-time
    function handleRupiahInput(input) {
        const cursorPosition = input.selectionStart;
        const oldValue = input.value;
        const numericValue = input.value.replace(/[^\d]/g, "");
        const numberValue = parseInt(numericValue) || 0;
        const formattedValue = formatToRupiah(numberValue);
        
        input.value = formattedValue;
        document.getElementById("jumlah_bayar").value = numberValue;
        
        const newLength = formattedValue.length;
        const oldLength = oldValue.length;
        const newCursorPosition = cursorPosition + (newLength - oldLength);
        
        setTimeout(() => {
            input.setSelectionRange(newCursorPosition, newCursorPosition);
        }, 0);
    }

    // Prepare input when focused
    function prepareRupiahInput(input) {
        const hiddenValue = document.getElementById("jumlah_bayar").value;
        if (hiddenValue && hiddenValue !== "0") {
            input.value = hiddenValue;
            setTimeout(() => input.select(), 50);
        }
    }

    // Finalize input when focus is lost
    function finalizeRupiahInput(input) {
        const numericValue = parseFromRupiah(input.value);
        const formattedValue = formatToRupiah(numericValue);
        input.value = formattedValue;
        document.getElementById("jumlah_bayar").value = numericValue;
    }

    // Enhanced calculate zakat function
    function calculateZakat() {
        const jiwaEl = document.getElementById("jumlah_jiwa");
        const masterZakatSelect = document.getElementById("master_zakat_id");
        const kewajibanDisplay = document.getElementById("kewajiban_display");

        if (!jiwaEl || !masterZakatSelect || !kewajibanDisplay) {
            return;
        }

        const jiwa = parseInt(jiwaEl.value) || 0;
        const selectedValue = masterZakatSelect.value;

        if (jiwa > 0 && selectedValue) {
            const selectedOption = masterZakatSelect.options[masterZakatSelect.selectedIndex];
            const hargaStr = selectedOption.getAttribute('data-harga');
            const kgStr = selectedOption.getAttribute('data-kg');
            const harga = parseFloat(hargaStr) || 0;
            const kg = parseFloat(kgStr) || 0;

            if (kg > 0) {
                // Jenis beras
                const totalKg = jiwa * kg;
                const totalUang = jiwa * harga;
                kewajibanDisplay.innerHTML = `
                    <div>
                        <div style="font-size: 28px; color: #16a127;">${totalKg.toFixed(1)} kg beras</div>
                        <div style="font-size: 16px; color: #6b7280; margin-top: 4px;">
                            Setara Rp ${formatToRupiah(totalUang)}
                        </div>
                    </div>
                `;
            } else {
                // Jenis uang
                const kewajiban = jiwa * harga;
                kewajibanDisplay.innerHTML = `<div style="color: #1EAF2F;">Rp ${formatToRupiah(kewajiban)}</div>`;
            }
        } else {
            kewajibanDisplay.innerHTML = '<span style="color: #9ca3af;">-</span>';
        }
    }

    // Initialize on page load
    document.addEventListener("DOMContentLoaded", function () {
        const displayInput = document.getElementById("jumlah_bayar_display");

        if (displayInput) {
            // Prevent non-numeric input
            displayInput.addEventListener("keypress", function (e) {
                if (
                    !/[0-9]/.test(e.key) &&
                    !["Backspace", "Delete", "Tab", "Escape", "Enter", "ArrowLeft", "ArrowRight"].includes(e.key)
                ) {
                    e.preventDefault();
                }
            });

            // Handle paste events
            displayInput.addEventListener("paste", function (e) {
                e.preventDefault();
                const pastedText = (e.clipboardData || window.clipboardData).getData("text");
                const numericValue = pastedText.replace(/[^\d]/g, "");
                if (numericValue) {
                    this.value = numericValue;
                    handleRupiahInput(this);
                }
            });
        }

        // Initialize calculation
        calculateZakat();
        updateAddButtonVisibility();
    });

    // Form validation
    document.getElementById("muzakkiForm").addEventListener("submit", function (e) {
        const jiwa = parseInt(document.getElementById("jumlah_jiwa").value);
        const masterZakatId = document.getElementById("master_zakat_id").value;
        const jumlahBayar = parseInt(document.getElementById("jumlah_bayar").value);

        // Validasi basic fields
        if (jiwa <= 0) {
            e.preventDefault();
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: 'error',
                    title: 'Input Tidak Valid',
                    text: 'Jumlah jiwa harus lebih dari 0',
                    confirmButtonColor: '#1EAF2F'
                });
            } else {
                alert('Jumlah jiwa harus lebih dari 0');
            }
            return false;
        }

        if (!masterZakatId) {
            e.preventDefault();
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: 'error',
                    title: 'Data Belum Lengkap',
                    text: 'Pilih jenis zakat terlebih dahulu',
                    confirmButtonColor: '#1EAF2F'
                });
            } else {
                alert('Pilih jenis zakat terlebih dahulu');
            }
            return false;
        }

        if (jumlahBayar <= 0) {
            e.preventDefault();
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: 'error',
                    title: 'Input Tidak Valid',
                    text: 'Jumlah bayar harus lebih dari 0',
                    confirmButtonColor: '#1EAF2F'
                });
            } else {
                alert('Jumlah bayar harus lebih dari 0');
            }
            return false;
        }

        // Validasi semua section muzakki
        const muzakkiSections = document.querySelectorAll(".muzakki-section");
        let hasEmptyName = false;
        let emptyNameIndex = -1;

        muzakkiSections.forEach((section, index) => {
            const namaInput = section.querySelector(`input[name^="muzakki"][name$="[nama]"]`);
            if (namaInput && !namaInput.value.trim()) {
                hasEmptyName = true;
                emptyNameIndex = index + 1;
            }
        });

        if (hasEmptyName) {
            e.preventDefault();
            if (typeof Swal !== 'undefined') {
                Swal.fire({
                    icon: 'error',
                    title: 'Data Belum Lengkap',
                    text: `Nama muzakki #${emptyNameIndex} tidak boleh kosong`,
                    confirmButtonColor: '#1EAF2F'
                });
            } else {
                alert(`Nama muzakki #${emptyNameIndex} tidak boleh kosong`);
            }
            return false;
        }

        // Konfirmasi final
        e.preventDefault();
        const muzakkiCount = muzakkiSections.length;
        const masterZakatSelect = document.getElementById("master_zakat_id");
        const jenisZakatText = masterZakatSelect.options[masterZakatSelect.selectedIndex].text;

        if (typeof Swal !== 'undefined') {
            Swal.fire({
                icon: 'question',
                title: 'Konfirmasi Perubahan Data',
                html: `
                    <div style="text-align: left; padding: 10px;">
                        <p><strong>Jumlah Muzakki:</strong> ${muzakkiCount} orang</p>
                        <p><strong>Jumlah Jiwa:</strong> ${jiwa} jiwa</p>
                        <p><strong>Jenis Zakat:</strong> ${jenisZakatText}</p>
                        <p><strong>Jumlah Bayar:</strong> Rp ${formatToRupiah(jumlahBayar)}</p>
                        <br>
                        <p style="color: #6b7280;">Apakah perubahan data sudah benar?</p>
                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'Ya, Update Data',
                cancelButtonText: 'Periksa Lagi',
                confirmButtonColor: '#1EAF2F',
                cancelButtonColor: '#6b7280',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("muzakkiForm").submit();
                }
            });
        } else {
            const confirmMessage = `Apakah perubahan data sudah benar?\n\n` +
                `- Jumlah Muzakki: ${muzakkiCount} orang\n` +
                `- Jumlah Jiwa: ${jiwa} jiwa\n` +
                `- Jenis Zakat: ${jenisZakatText}\n` +
                `- Jumlah Bayar: Rp ${formatToRupiah(jumlahBayar)}`;
            
            if (confirm(confirmMessage)) {
                document.getElementById("muzakkiForm").submit();
            }
        }

        return false;
    });
</script>

