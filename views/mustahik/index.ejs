<%- include('../layouts/header', { title: 'Data Mustahik - Zakat Fitrah App' , bodyClass: 'bg-gray-50' ,
  currentPage: 'mustahik' }) %>

  <div class="page-wrapper">
    <!-- Modern Header -->
    <div class="page-header">
      <div class="header-content-wrapper">
        <div class="header-left-section">
          <div class="header-icon-box">
            <i class="fas fa-user-friends"></i>
          </div>
          <div class="header-text-box">
            <h1 class="header-title-text">Data Mustahik</h1>
            <p class="header-subtitle-text">Kelola data penerima zakat (mustahik)</p>
          </div>
        </div>
        <div class="header-actions">
          <a href="/mustahik/create" class="btn-action btn-action-primary">
            <i class="fas fa-plus mr-2"></i>
            <span>Tambah Mustahik</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-container stats-container-5">
      <div class="stat-box stat-box-primary">
        <div class="stat-icon-wrapper stat-icon-primary">
          <i class="fas fa-user-friends"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= mustahik.length %>
          </div>
          <div class="stat-label-text">Total Mustahik</div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-danger">
        <div class="stat-icon-wrapper stat-icon-danger">
          <i class="fas fa-exclamation-triangle"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= mustahik.filter(m=> m.kategori === 'fakir').length %>
          </div>
          <div class="stat-label-text">Fakir</div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-warning">
        <div class="stat-icon-wrapper stat-icon-warning">
          <i class="fas fa-coins"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= mustahik.filter(m=> m.kategori === 'miskin').length %>
          </div>
          <div class="stat-label-text">Miskin</div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-success">
        <div class="stat-icon-wrapper stat-icon-success">
          <i class="fas fa-hands"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= mustahik.filter(m=> m.kategori === 'amil').length %>
          </div>
          <div class="stat-label-text">Amil</div>
        </div>
        <div class="stat-decoration"></div>
      </div>

      <div class="stat-box stat-box-info">
        <div class="stat-icon-wrapper stat-icon-info">
          <i class="fas fa-heart"></i>
        </div>
        <div class="stat-content-box">
          <div class="stat-value-text">
            <%= mustahik.filter(m=> m.kategori === 'mualaf').length %>
          </div>
          <div class="stat-label-text">Mualaf</div>
        </div>
        <div class="stat-decoration"></div>
      </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
      <div class="filter-header">
        <div class="filter-header-icon">
          <i class="fas fa-filter"></i>
        </div>
        <div class="filter-header-text">
          <h2 class="filter-title">Filter & Pencarian</h2>
          <p class="filter-subtitle">Cari dan filter data mustahik</p>
        </div>
      </div>
      <div class="filter-content">
        <div class="filter-form">
          <div class="filter-input-group filter-input-wide">
            <label class="filter-label">Cari Mustahik</label>
            <div class="filter-input-wrapper">
              <div class="filter-input-icon">
                <i class="fas fa-search"></i>
              </div>
              <input type="text" id="search" placeholder="Cari berdasarkan nama..." class="filter-input">
            </div>
          </div>

          <div class="filter-input-group">
            <label class="filter-label">Filter Kategori</label>
            <select id="categoryFilter" class="filter-select">
              <option value="">Semua Kategori</option>
              <option value="fakir">Fakir</option>
              <option value="miskin">Miskin</option>
              <option value="amil">Amil</option>
              <option value="mualaf">Mualaf</option>
              <option value="fisabilillah">Fisabilillah</option>
              <option value="ibnu_sabil">Ibnu Sabil</option>
              <option value="gharimin">Gharimin</option>
              <option value="riqab">Riqab</option>
            </select>
          </div>

          <div class="filter-input-group">
            <label class="filter-label">Filter RT</label>
            <select id="rtFilter" class="filter-select">
              <option value="">Semua RT</option>
              <% rtList.forEach(rt=> { %>
                <option value="<%= rt.id %>">RT <%= rt.nomor_rt %>
                </option>
                <% }); %>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Data Table Section -->
    <div class="table-section">
      <div class="table-header-wrapper">
        <div class="table-header-left">
          <div class="table-header-icon">
            <i class="fas fa-list"></i>
          </div>
          <div class="table-header-text">
            <h2 class="table-title">Daftar Mustahik</h2>
            <p class="table-subtitle">Kelola data penerima zakat</p>
          </div>
        </div>
        <div class="table-header-right">
          <span class="table-badge">
            <i class="fas fa-database"></i>
            <%= mustahik.length %> mustahik
          </span>
        </div>
      </div>

      <div class="table-content-wrapper">
        <% if (mustahik.length===0) { %>
          <div class="empty-state-box">
            <div class="empty-state-icon">
              <i class="fas fa-user-friends"></i>
            </div>
            <h3 class="empty-state-title">Belum ada data mustahik</h3>
            <p class="empty-state-desc">Tambahkan data mustahik pertama untuk memulai</p>
            <a href="/mustahik/create" class="btn-empty-state">
              <i class="fas fa-plus mr-2"></i>
              Tambah Mustahik Pertama
            </a>
          </div>
          <% } else { %>
            <!-- Desktop Table View -->
            <div class="table-responsive-wrapper desktop-view">
              <table class="data-table" id="mustahikTable">
                <thead>
                  <tr>
                    <th>Nama & RT</th>
                    <th>Kategori</th>
                    <th>Tanggal Daftar</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% mustahik.forEach((m, index)=> { %>
                    <tr class="table-row-animated" style="animation-delay: <%= index * 0.05 %>s;"
                      data-category="<%= m.kategori %>" data-rt="<%= m.rt_id || '' %>">
                      <td>
                        <div class="cell-mustahik">
                          <div class="mustahik-avatar">
                            <span>
                              <%= m.nama.charAt(0).toUpperCase() %>
                            </span>
                          </div>
                          <div class="mustahik-info">
                            <div class="mustahik-name search-target">
                              <%= m.nama %>
                            </div>
                            <div class="mustahik-rt">
                              <% if (m.rt_nama) { %>
                                <i class="fas fa-home"></i> RT <%= m.rt_nama %>
                                  <% } else { %>
                                    <i class="fas fa-minus"></i> Tidak ada RT
                                    <% } %>
                            </div>
                          </div>
                        </div>
                      </td>
                      <td>
                        <span class="category-badge category-<%= m.kategori %>">
                          <% if (m.kategori==='fakir' ) { %>
                            <i class="fas fa-exclamation-triangle"></i> Fakir
                            <% } else if (m.kategori==='miskin' ) { %>
                              <i class="fas fa-coins"></i> Miskin
                              <% } else if (m.kategori==='amil' ) { %>
                                <i class="fas fa-hands"></i> Amil
                                <% } else if (m.kategori==='mualaf' ) { %>
                                  <i class="fas fa-heart"></i> Mualaf
                                  <% } else if (m.kategori==='fisabilillah' ) { %>
                                    <i class="fas fa-moon"></i> Fisabilillah
                                    <% } else if (m.kategori==='ibnu_sabil' ) { %>
                                      <i class="fas fa-route"></i> Ibnu Sabil
                                      <% } else if (m.kategori==='gharimin' ) { %>
                                        <i class="fas fa-credit-card"></i> Gharimin
                                        <% } else if (m.kategori==='riqab' ) { %>
                                          <i class="fas fa-unlock"></i> Riqab
                                          <% } else { %>
                                            <i class="fas fa-user"></i>
                                            <%= m.kategori %>
                                              <% } %>
                        </span>
                      </td>
                      <td>
                        <div class="cell-date">
                          <i class="fas fa-calendar"></i>
                          <%= new Date(m.created_at).toLocaleDateString('id-ID', { day: 'numeric' , month: 'long' ,
                            year: 'numeric' }) %>
                        </div>
                      </td>
                      <td>
                        <div class="action-buttons-group">
                          <a href="/mustahik/detail/<%= m.id %>" class="btn-icon btn-icon-info" title="Lihat Detail">
                            <i class="fas fa-eye"></i>
                          </a>
                          <a href="/mustahik/edit/<%= m.id %>" class="btn-icon btn-icon-primary" title="Edit">
                            <i class="fas fa-edit"></i>
                          </a>
                          <form method="POST" action="/mustahik/delete/<%= m.id %>?_method=DELETE" class="inline-form"
                            id="delete-form-<%= m.id %>">
                            <button type="button" class="btn-icon btn-icon-danger" title="Hapus" data-id="<%= m.id %>"
                              data-nama="<%= m.nama %>" onclick="confirmDelete(this)">
                              <i class="fas fa-trash"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>

            <!-- Mobile Card View -->
            <div class="mobile-view">
              <% mustahik.forEach((m, index)=> { %>
                <div class="mobile-card" data-category="<%= m.kategori %>" data-rt="<%= m.rt_id || '' %>"
                  style="animation-delay: <%= index * 0.05 %>s;">
                  <div class="mobile-card-header">
                    <div class="mobile-card-avatar">
                      <div class="mustahik-avatar">
                        <span>
                          <%= m.nama.charAt(0).toUpperCase() %>
                        </span>
                      </div>
                      <div class="mobile-card-info">
                        <h3 class="mobile-card-name search-target">
                          <%= m.nama %>
                        </h3>
                        <div class="mobile-card-rt">
                          <% if (m.rt_nama) { %>
                            <i class="fas fa-home"></i> RT <%= m.rt_nama %>
                              <% } else { %>
                                <i class="fas fa-minus"></i> Tidak ada RT
                                <% } %>
                        </div>
                      </div>
                    </div>
                    <div class="mobile-card-actions">
                      <a href="/mustahik/detail/<%= m.id %>" class="btn-icon btn-icon-info" title="Lihat Detail">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/mustahik/edit/<%= m.id %>" class="btn-icon btn-icon-primary" title="Edit">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form method="POST" action="/mustahik/delete/<%= m.id %>?_method=DELETE" class="inline-form"
                        id="delete-form-mobile-<%= m.id %>">
                        <button type="button" class="btn-icon btn-icon-danger" title="Hapus" data-id="<%= m.id %>"
                          data-nama="<%= m.nama %>" onclick="confirmDelete(this)">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </div>
                  <div class="mobile-card-body">
                    <div class="mobile-card-item">
                      <p class="mobile-card-label">Kategori</p>
                      <span class="category-badge category-<%= m.kategori %>">
                        <% if (m.kategori==='fakir' ) { %>
                          <i class="fas fa-exclamation-triangle"></i> Fakir
                          <% } else if (m.kategori==='miskin' ) { %>
                            <i class="fas fa-coins"></i> Miskin
                            <% } else if (m.kategori==='amil' ) { %>
                              <i class="fas fa-hands"></i> Amil
                              <% } else if (m.kategori==='mualaf' ) { %>
                                <i class="fas fa-heart"></i> Mualaf
                                <% } else if (m.kategori==='fisabilillah' ) { %>
                                  <i class="fas fa-moon"></i> Fisabilillah
                                  <% } else if (m.kategori==='ibnu_sabil' ) { %>
                                    <i class="fas fa-route"></i> Ibnu Sabil
                                    <% } else if (m.kategori==='gharimin' ) { %>
                                      <i class="fas fa-credit-card"></i> Gharimin
                                      <% } else if (m.kategori==='riqab' ) { %>
                                        <i class="fas fa-unlock"></i> Riqab
                                        <% } else { %>
                                          <i class="fas fa-user"></i>
                                          <%= m.kategori %>
                                            <% } %>
                      </span>
                    </div>
                    <div class="mobile-card-item">
                      <p class="mobile-card-label">Tanggal Daftar</p>
                      <div class="mobile-card-value">
                        <i class="fas fa-calendar"></i>
                        <%= new Date(m.created_at).toLocaleDateString('id-ID', { day: 'numeric' , month: 'short' ,
                          year: 'numeric' }) %>
                      </div>
                    </div>
                  </div>
                </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>
  </div>

