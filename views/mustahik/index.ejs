  <!-- JavaScript -->
  <script>
    // Add entrance animations on load
    document.addEventListener('DOMContentLoaded', function () {
      const statBoxes = document.querySelectorAll('.stat-box');
      statBoxes.forEach((box, index) => {
        box.style.opacity = '0';
        box.style.transform = 'translateY(20px)';
        setTimeout(() => {
          box.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
          box.style.opacity = '1';
          box.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });

    // Search functionality
    document.getElementById("search").addEventListener("input", function () {
      const searchTerm = this.value.toLowerCase();
      const tableRows = document.querySelectorAll("#mustahikTable tbody tr");
      const cardItems = document.querySelectorAll("[data-category]");

      // Filter table rows
      tableRows.forEach((row) => {
        const searchTarget = row.querySelector(".search-target");
        if (searchTarget) {
          const text = searchTarget.textContent.toLowerCase();
          row.style.display = text.includes(searchTerm) ? "" : "none";
        }
      });

      // Filter card items
      cardItems.forEach((card) => {
        const searchTarget = card.querySelector(".search-target");
        if (searchTarget) {
          const text = searchTarget.textContent.toLowerCase();
          card.style.display = text.includes(searchTerm) ? "" : "none";
        }
      });
    });

    // Category filter
    document.getElementById("categoryFilter").addEventListener("change", function () {
      const category = this.value;
      const tableRows = document.querySelectorAll("#mustahikTable tbody tr");
      const cardItems = document.querySelectorAll("[data-category]");

      // Filter table rows
      tableRows.forEach((row) => {
        const rowCategory = row.getAttribute("data-category");
        if (!category || rowCategory === category) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });

      // Filter card items
      cardItems.forEach((card) => {
        const cardCategory = card.getAttribute("data-category");
        if (!category || cardCategory === category) {
          card.style.display = "";
        } else {
          card.style.display = "none";
        }
      });
    });

    // RT filter
    document.getElementById("rtFilter").addEventListener("change", function () {
      const rtId = this.value;
      const tableRows = document.querySelectorAll("#mustahikTable tbody tr");
      const cardItems = document.querySelectorAll("[data-category]");

      // Filter table rows
      tableRows.forEach((row) => {
        const rowRt = row.getAttribute("data-rt");
        if (!rtId || rowRt === rtId) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });

      // Filter card items
      cardItems.forEach((card) => {
        const cardRt = card.getAttribute("data-rt");
        if (!rtId || cardRt === rtId) {
          card.style.display = "";
        } else {
          card.style.display = "none";
        }
      });
    });

    // Confirm delete function
    function confirmDelete(button) {
      const id = button.getAttribute('data-id');
      const nama = button.getAttribute('data-nama');

      if (typeof Swal !== 'undefined') {
        Swal.fire({
          title: 'Konfirmasi Hapus',
          text: 'Yakin ingin menghapus data mustahik ' + nama + '? Data ini tidak dapat dikembalikan.',
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#ef4444',
          cancelButtonColor: '#6b7280',
          confirmButtonText: 'Ya, Hapus',
          cancelButtonText: 'Batal'
        }).then((result) => {
          if (result.isConfirmed) {
            const form = document.getElementById('delete-form-' + id) || document.getElementById('delete-form-mobile-' + id);
            if (form) form.submit();
          }
        });
      } else {
        if (confirm('Apakah Anda yakin ingin menghapus data mustahik ' + nama + '?')) {
          const form = document.getElementById('delete-form-' + id) || document.getElementById('delete-form-mobile-' + id);
          if (form) form.submit();
        }
      }
    }
  </script>

