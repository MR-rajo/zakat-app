<%- include('../layouts/header', { title: 'Edit Mustahik - Zakat Fitrah App', bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'mustahik' }) %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center">
      <a href="/mustahik" class="text-gray-500 hover:text-gray-700 mr-4">
        <i class="fas fa-arrow-left text-lg"></i>
      </a>
      <div>
        <h1 class="text-2xl font-bold text-gray-900">
          <i class="fas fa-user-edit mr-2 text-primary-600"></i>Edit Mustahik
        </h1>
        <p class="text-gray-600 mt-1">Perbarui data penerima zakat</p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900">
        <i class="fas fa-edit mr-2 text-primary-600"></i>Form Edit Data Mustahik
      </h2>
    </div>

    <form method="POST" action="/mustahik/edit/<%= mustahik.id %>?_method=PUT" class="p-6 space-y-6">
      <!-- Nama -->
      <div>
        <label for="nama" class="block text-sm font-medium text-gray-700 mb-2">
          Nama Lengkap <span class="text-red-500">*</span>
        </label>
        <input type="text" id="nama" name="nama" required value="<%= mustahik.nama %>"
               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
               placeholder="Masukkan nama lengkap mustahik">
      </div>

      <!-- RT -->
      <div>
        <label for="rt_id" class="block text-sm font-medium text-gray-700 mb-2">
          RT (Rukun Tetangga)
        </label>
        <select id="rt_id" name="rt_id"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          <option value="">Pilih RT (Opsional)</option>
          <% rtList.forEach(rt => { %>
          <option value="<%= rt.id %>" <%= mustahik.rt_id == rt.id ? 'selected' : '' %>>
            RT <%= rt.nama %> - <%= rt.ketua %>
          </option>
          <% }); %>
        </select>
        <p class="mt-1 text-sm text-gray-500">Pilih RT jika mustahik terdaftar di RT tertentu</p>
      </div>

      <!-- Kategori -->
      <div>
        <label for="kategori" class="block text-sm font-medium text-gray-700 mb-2">
          Kategori Mustahik <span class="text-red-500">*</span>
        </label>
        <select id="kategori" name="kategori" required
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
          <option value="">Pilih Kategori</option>
          <option value="fakir" <%= mustahik.kategori === 'fakir' ? 'selected' : '' %>>
            Fakir - Orang yang tidak memiliki harta dan penghasilan
          </option>
          <option value="miskin" <%= mustahik.kategori === 'miskin' ? 'selected' : '' %>>
            Miskin - Orang yang memiliki harta/penghasilan tidak mencukupi
          </option>
          <option value="amil" <%= mustahik.kategori === 'amil' ? 'selected' : '' %>>
            Amil - Pengelola/pengumpul zakat
          </option>
          <option value="mualaf" <%= mustahik.kategori === 'mualaf' ? 'selected' : '' %>>
            Mualaf - Orang yang baru masuk Islam
          </option>
          <option value="fisabilillah" <%= mustahik.kategori === 'fisabilillah' ? 'selected' : '' %>>
            Fisabilillah - Untuk kepentingan agama Islam
          </option>
          <option value="ibnu_sabil" <%= mustahik.kategori === 'ibnu_sabil' ? 'selected' : '' %>>
            Ibnu Sabil - Musafir yang kehabisan bekal
          </option>
          <option value="gharimin" <%= mustahik.kategori === 'gharimin' ? 'selected' : '' %>>
            Gharimin - Orang yang berhutang untuk kebaikan
          </option>
          <option value="riqab" <%= mustahik.kategori === 'riqab' ? 'selected' : '' %>>
            Riqab - Memerdekakan budak/tawanan
          </option>
        </select>
      </div>

      <!-- Kategori Info -->
      <div id="kategoriInfo" class="<%= mustahik.kategori ? '' : 'hidden' %>">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-info-circle text-blue-400"></i>
            </div>
            <div class="ml-3">
              <h4 class="text-sm font-medium text-blue-800">Informasi Kategori</h4>
              <div class="mt-2 text-sm text-blue-700" id="kategoriDescription">
                <!-- Description will be updated by JavaScript -->
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Info Perubahan -->
      <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-exclamation-triangle text-yellow-400"></i>
          </div>
          <div class="ml-3">
            <h4 class="text-sm font-medium text-yellow-800">Perhatian</h4>
            <div class="mt-2 text-sm text-yellow-700">
              <p>Data mustahik ini telah terdaftar sejak <%= new Date(mustahik.created_at).toLocaleDateString('id-ID', { 
                day: 'numeric', 
                month: 'long', 
                year: 'numeric' 
              }) %>.</p>
              <p>Pastikan perubahan data sudah benar sebelum menyimpan.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Submit Buttons -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <a href="/mustahik" class="btn-secondary">
          <i class="fas fa-times mr-2"></i>Batal
        </a>
        <button type="submit" class="btn-primary">
          <i class="fas fa-save mr-2"></i>Simpan Perubahan
        </button>
      </div>
    </form>
  </div>
</div>

<script>
// Category information
const categoryInfo = {
  fakir: 'Fakir adalah orang yang tidak memiliki harta dan penghasilan layak untuk memenuhi kebutuhan pokoknya.',
  miskin: 'Miskin adalah orang yang memiliki harta atau penghasilan namun tidak mencukupi untuk memenuhi kebutuhan pokok.',
  amil: 'Amil adalah orang yang bertugas mengumpulkan, mengelola, dan mendistribusikan zakat.',
  mualaf: 'Mualaf adalah orang yang baru masuk Islam dan membutuhkan bantuan untuk memperkuat keimanannya.',
  fisabilillah: 'Fisabilillah adalah untuk kepentingan agama Islam seperti dakwah, pembangunan masjid, dll.',
  ibnu_sabil: 'Ibnu Sabil adalah musafir yang sedang dalam perjalanan dan kehabisan bekal.',
  gharimin: 'Gharimin adalah orang yang berhutang untuk kepentingan yang baik dan tidak mampu membayar.',
  riqab: 'Riqab adalah untuk memerdekakan budak atau membebaskan tawanan Muslim.'
};

// Update category description on page load
function updateCategoryInfo() {
  const category = document.getElementById('kategori').value;
  const infoDiv = document.getElementById('kategoriInfo');
  const descDiv = document.getElementById('kategoriDescription');
  
  if (category && categoryInfo[category]) {
    descDiv.textContent = categoryInfo[category];
    infoDiv.classList.remove('hidden');
  } else {
    infoDiv.classList.add('hidden');
  }
}

// Initialize category info
updateCategoryInfo();

// Show category information on change
document.getElementById('kategori').addEventListener('change', updateCategoryInfo);

// Form validation
document.querySelector('form').addEventListener('submit', function(e) {
  const nama = document.getElementById('nama').value.trim();
  const kategori = document.getElementById('kategori').value;
  
  if (!nama) {
    e.preventDefault();
    alert('Nama mustahik harus diisi');
    document.getElementById('nama').focus();
    return;
  }
  
  if (!kategori) {
    e.preventDefault();
    alert('Kategori mustahik harus dipilih');
    document.getElementById('kategori').focus();
    return;
  }
  
  // Confirm submission
  if (!confirm('Apakah perubahan data sudah benar?')) {
    e.preventDefault();
  }
});
</script>

<%- include('../layouts/footer') %>