<%- include('../layouts/header', { title: 'Tambah Mustahik - Zakat Fitrah App',
bodyClass: 'bg-gray-50 min-h-screen', currentPage: 'mustahik' }) %>

<div class="page-wrapper">
  <!-- Modern Header -->
  <div class="page-header">
    <div class="header-content-wrapper">
      <div class="header-left-section">
        <a href="/mustahik" class="btn-back" title="Kembali">
          <i class="fas fa-arrow-left"></i>
        </a>
        <div class="header-icon-box">
          <i class="fas fa-user-plus"></i>
        </div>
        <div class="header-text-box">
          <h1 class="header-title-text">Tambah Mustahik</h1>
          <p class="header-subtitle-text">Tambahkan data penerima zakat baru</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Section -->
  <div class="form-section">
    <div class="form-header-wrapper">
      <div class="form-header-left">
        <div class="form-header-icon">
          <i class="fas fa-edit"></i>
        </div>
        <div class="form-header-text">
          <h2 class="form-title">Form Data Mustahik</h2>
          <p class="form-subtitle">Lengkapi form di bawah ini dengan benar</p>
        </div>
      </div>
    </div>

    <form method="POST" action="/mustahik/create" class="form-content">
      <!-- Nama Field -->
      <div class="form-group">
        <label for="nama" class="form-label">
          <i class="fas fa-user label-icon"></i>
          Nama Lengkap <span class="required-mark">*</span>
        </label>
        <div class="input-wrapper">
          <div class="input-icon">
            <i class="fas fa-user-tag"></i>
          </div>
          <input
            type="text"
            id="nama"
            name="nama"
            required
            class="form-input"
            placeholder="Masukkan nama lengkap mustahik"
          />
        </div>
      </div>

      <!-- RT Field -->
      <div class="form-group">
        <label for="rt_id" class="form-label">
          <i class="fas fa-home label-icon"></i>
          RT (Rukun Tetangga)
        </label>
        <div class="input-wrapper">
          <div class="input-icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <select id="rt_id" name="rt_id" class="form-select">
            <option value="">Pilih RT (Opsional)</option>
            <% rtList.forEach(rt => { %>
            <option value="<%= rt.id %>">
              RT <%= rt.nama %> - <%= rt.ketua %>
            </option>
            <% }); %>
          </select>
        </div>
        <p class="field-helper-text">
          <i class="fas fa-info-circle mr-1"></i>
          Pilih RT jika mustahik terdaftar di RT tertentu
        </p>
      </div>

      <!-- Kategori Field -->
      <div class="form-group">
        <label for="kategori" class="form-label">
          <i class="fas fa-tag label-icon"></i>
          Kategori Mustahik <span class="required-mark">*</span>
        </label>
        <div class="input-wrapper">
          <div class="input-icon">
            <i class="fas fa-list-alt"></i>
          </div>
          <select id="kategori" name="kategori" required class="form-select">
            <option value="">Pilih Kategori</option>
            <option value="fakir">
              Fakir - Orang yang tidak memiliki harta dan penghasilan
            </option>
            <option value="miskin">
              Miskin - Orang yang memiliki harta/penghasilan tidak mencukupi
            </option>
            <option value="amil">Amil - Pengelola/pengumpul zakat</option>
            <option value="mualaf">Mualaf - Orang yang baru masuk Islam</option>
            <option value="fisabilillah">
              Fisabilillah - Untuk kepentingan agama Islam
            </option>
            <option value="ibnu_sabil">
              Ibnu Sabil - Musafir yang kehabisan bekal
            </option>
            <option value="gharimin">
              Gharimin - Orang yang berhutang untuk kebaikan
            </option>
            <option value="riqab">Riqab - Memerdekakan budak/tawanan</option>
          </select>
        </div>
      </div>

      <!-- Kategori Info Box -->
      <div id="kategoriInfo" class="info-box-hidden">
        <div class="info-box-wrapper">
          <div class="info-box-icon">
            <i class="fas fa-info-circle"></i>
          </div>
          <div class="info-box-content">
            <h4 class="info-box-title">Informasi Kategori</h4>
            <div class="info-box-description" id="kategoriDescription">
              <!-- Description will be inserted here by JavaScript -->
            </div>
          </div>
        </div>
      </div>

      <!-- Submit Buttons -->
      <div class="form-actions">
        <a href="/mustahik" class="btn-action btn-action-secondary">
          <i class="fas fa-times mr-2"></i>
          <span>Batal</span>
        </a>
        <button type="submit" class="btn-action btn-action-primary">
          <i class="fas fa-save mr-2"></i>
          <span>Simpan Data</span>
        </button>
      </div>
    </form>
  </div>
</div>

