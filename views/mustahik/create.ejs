<!-- JavaScript -->
<script>
  // Category information
  const categoryInfo = {
    fakir:
      "Fakir adalah orang yang tidak memiliki harta dan penghasilan layak untuk memenuhi kebutuhan pokoknya.",
    miskin:
      "Miskin adalah orang yang memiliki harta atau penghasilan namun tidak mencukupi untuk memenuhi kebutuhan pokok.",
    amil: "Amil adalah orang yang bertugas mengumpulkan, mengelola, dan mendistribusikan zakat.",
    mualaf:
      "Mualaf adalah orang yang baru masuk Islam dan membutuhkan bantuan untuk memperkuat keimanannya.",
    fisabilillah:
      "Fisabilillah adalah untuk kepentingan agama Islam seperti dakwah, pembangunan masjid, dll.",
    ibnu_sabil:
      "Ibnu Sabil adalah musafir yang sedang dalam perjalanan dan kehabisan bekal.",
    gharimin:
      "Gharimin adalah orang yang berhutang untuk kepentingan yang baik dan tidak mampu membayar.",
    riqab:
      "Riqab adalah untuk memerdekakan budak atau membebaskan tawanan Muslim.",
  };

  // Show category information with animation
  document.getElementById("kategori").addEventListener("change", function () {
    const category = this.value;
    const infoDiv = document.getElementById("kategoriInfo");
    const descDiv = document.getElementById("kategoriDescription");

    if (category && categoryInfo[category]) {
      descDiv.textContent = categoryInfo[category];
      infoDiv.style.display = 'block';
      // Trigger reflow for animation
      void infoDiv.offsetWidth;
    } else {
      infoDiv.style.display = 'none';
    }
  });

  // Form entrance animation
  document.addEventListener('DOMContentLoaded', function () {
    const formGroups = document.querySelectorAll('.form-group');
    formGroups.forEach((group, index) => {
      group.style.opacity = '0';
      group.style.transform = 'translateY(20px)';
      setTimeout(() => {
        group.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
        group.style.opacity = '1';
        group.style.transform = 'translateY(0)';
      }, index * 100);
    });
  });

  // Form validation
  document.querySelector("form").addEventListener("submit", function (e) {
    const nama = document.getElementById("nama").value.trim();
    const kategori = document.getElementById("kategori").value;

    if (!nama) {
      e.preventDefault();
      showError("Nama mustahik harus diisi", "Data Belum Lengkap");
      document.getElementById("nama").focus();
      return;
    }

    if (!kategori) {
      e.preventDefault();
      showError("Kategori mustahik harus dipilih", "Data Belum Lengkap");
      document.getElementById("kategori").focus();
      return;
    }

    // Confirm submission
    e.preventDefault();
    showConfirm(
      "Apakah data yang dimasukkan sudah benar?",
      "Konfirmasi Data"
    ).then((result) => {
      if (result.isConfirmed) {
        this.submit();
      }
    });
  });

  // Input focus effects
  const inputs = document.querySelectorAll('.form-input, .form-select');
  inputs.forEach(input => {
    input.addEventListener('focus', function() {
      const icon = this.previousElementSibling;
      if (icon && icon.classList.contains('input-icon')) {
        icon.style.color = '#1EAF2F';
        icon.style.transform = 'scale(1.1)';
      }
    });
    
    input.addEventListener('blur', function() {
      const icon = this.previousElementSibling;
      if (icon && icon.classList.contains('input-icon')) {
        icon.style.color = '#9ca3af';
        icon.style.transform = 'scale(1)';
      }
    });
  });
</script>

